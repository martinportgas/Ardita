@model Ardita.Models.DbModels.TrxClassification
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row wrapper border-bottom white-bg page-heading">
    <div class="col-lg-10">
        <h2>Classification</h2>
        <ol class="breadcrumb">
            <li class="breadcrumb-item">
                <a href="@Url.Action("Index", "Home", new {Area = "General"})"><i class="fa fa-home"></i></a>
            </li>
            <li class="breadcrumb-item">
                Master Data
            </li>
            <li class="breadcrumb-item">
                <a href="@Url.Action("Index", "Classification", new {Area = "MasterData"})">Classification</a>
            </li>
            <li class="active breadcrumb-item">
                <strong>Create</strong>
            </li>
        </ol>
    </div>
    <div class="col-lg-2">
    </div>
</div>
<div class="wrapper wrapper-content animated fadeInRight">
    <div class="row">
        <div class="col-lg-12">
            <div class="ibox ">
                <div class="ibox-title">
                    <h5>Classification</h5>
                    <div class="ibox-tools">
                        <a class="collapse-link">
                            <i class="fa fa-chevron-up"></i>
                        </a>
                        <a class="dropdown-toggle" data-toggle="dropdown" href="form_basic.html#">
                            <i class="fa fa-wrench"></i>
                        </a>
                        <ul class="dropdown-menu dropdown-user">
                            <li>
                                <a href="form_basic.html#" class="dropdown-item">Config option 1</a>
                            </li>
                            <li>
                                <a href="form_basic.html#" class="dropdown-item">Config option 2</a>
                            </li>
                        </ul>
                        <a class="close-link">
                            <i class="fa fa-times"></i>
                        </a>
                    </div>
                </div>
                <div class="ibox-content">
                    <div class="row">
                        <div class="col-sm-6 b-r">
                            <form id="frmPosition" role="form" enctype="multipart/form-data" asp-controller="Classification" asp-area="MasterData" asp-action="Save">
                                <div class="form-group">
                                    <div class="form-group">
                                        <label>Jenis Klasifikasi</label>
                                        <select id="txtSubMenu" class="select2_demo_1 form-control" asp-for="TypeClassificationId" asp-items="ViewBag.listClassificationType" data-placeholder="-- Pilih Jenis Klasifikasi --"><option value=""></option></select>
                                    </div>
                                    <div class="form-group">
                                        <label>Kode Klasifikasi</label>
                                        <input type="text" placeholder="" id="txtPositionClassificationCode" class="form-control" asp-for="ClassificationCode" required>
                                    </div>
                                    <div class="form-group">
                                        <label>Nama Klasifikasi</label>
                                        <input type="text" placeholder="" id="txtPositionClassificationName" class="form-control" asp-for="ClassificationName" required>
                                    </div>
                                </div>
                                <div>
                                    <a href="@Url.Action("Index", "Classification", new { Area = "MasterData" })" class="btn btn-sm btn-danger float-right m-t-n-xs">Cancel</a>
                                    <button class="btn btn-sm btn-primary float-right m-t-n-xs mr-1" type="submit">Save</button>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

</div>
@section Scripts {
    <script type="text/javascript">

    </script>
}