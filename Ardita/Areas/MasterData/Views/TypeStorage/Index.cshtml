@using Ardita.Extensions;
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    Layout = GlobalConst.ViewStart;
}
<div class="row wrapper border-bottom white-bg page-heading">
    <div class="col-lg-10">
        <h2>Type Storages</h2>
        <ol class="breadcrumb">
            <li class="breadcrumb-item">
                <a href="@Url.Action(GlobalConst.Index, GlobalConst.Home, new { Area = GlobalConst.General })"><i class="fa fa-home"></i></a>
            </li>
            <li class="breadcrumb-item">
                Master Data
            </li>
            <li class="active breadcrumb-item">
                <strong>Master Type Storage</strong>
            </li>
        </ol>
    </div>
    <div class="col-lg-2">
    </div>
</div>
<div class="wrapper wrapper-content animated fadeInRight">
    <div class="row">
        <div class="col-lg-12">
            <div class="ibox ">
                <div class="ibox-title">
                    <h5>Archive Unit</h5>
                    <div class="ibox-tools">
                        <a href="@Url.Action(GlobalConst.Add, GlobalConst.TypeStorage, new { Area = GlobalConst.MasterData})" class="btn btn-sm btn-primary"><i class="fa fa-pencil"></i><span class="bold"> New</span></a>
                        <a href="@Url.Action(GlobalConst.Export, GlobalConst.TypeStorage, new { Area = GlobalConst.MasterData })" class="btn btn-sm btn-info"><i class="fa fa-download"></i><span class="bold"> Export</span></a>
                        <a href="@Url.Action(GlobalConst.UploadForm, GlobalConst.TypeStorage, new { Area = GlobalConst.MasterData})" class="btn btn-sm btn-success"><i class="fa fa-upload"></i><span class="bold"> Upload</span></a>
                    </div>
                </div>
                <div class="ibox-content">
                    <table id="tbl" class="table table-striped table-hover dataTables-example" style="width:100%">
                        <thead>
                            <tr>
                                <th>No</th>
                                <th>Action</th>
                                <th>Kode Media Penyimpanan</th>
                                <th>Nama Media Penyimpanan</th>
                                <th>Lokasi Simpan</th>
                                <th>Perusahaan</th>
                            </tr>
                        </thead>
                        <tbody></tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
@section Scripts {
    <script type="text/javascript">
        $(document).ready(function () {
            bsCustomFileInput.init();

            var table = $('#tbl').DataTable({
                processing: true,
                serverSide: true,
                scrollX: true,
                filter: true,
                ajax: {
                    "url": '@Url.Action(GlobalConst.GetData, GlobalConst.TypeStorage, new { Area = GlobalConst.MasterData})',
                    "type": "POST",
                    "datatype": "json"
                },
                columnDefs: [
                    {
                        width: 50, targets: 0
                    }
                ],
                fixedColumns: true,
                order: [[0, 'desc']],
                columns: [
                    {
                        "data": "typeStorageId", "name": "createdDate", "orderable": false, "searchable": false, "render": function (data, type, row, meta) {
                            return meta.row + meta.settings._iDisplayStart + 1;
                        }
                    },
                    {
                        "data": "typeStorageId", "name": "typeStorageId",
                        "render": function (data, type, row, meta) {
                            var detail = `<a class="btn btn-sm btn-warning" href="@Url.Action(GlobalConst.Detail, GlobalConst.TypeStorage, new { Area = GlobalConst.MasterData, Id = -1 })"><i class="fa fa-eye"></i> </a>`;
                            detail = detail.replace("-1", row.typeStorageId);

                            var edit = `<a class="btn btn-sm btn-primary" href="@Url.Action(GlobalConst.Update, GlobalConst.TypeStorage, new { Area = GlobalConst.MasterData, Id = -1 })"><i class="fa fa-pencil"></i> </a>`;
                            edit = edit.replace("-1", row.typeStorageId);

                            var remove = `<a class="btn btn-sm btn-danger" href="@Url.Action(GlobalConst.Remove, GlobalConst.TypeStorage, new { Area = GlobalConst.MasterData, Id = -1 })"><i class="fa fa-trash"></i> </a>`;
                            remove = remove.replace("-1", row.typeStorageId);

                            var JoinButton = '<div style="width:100px"></div>' + edit.concat(" ", detail).concat(" ", remove);
                            return JoinButton;
                        }
                    },
                    { "data": "typeStorageCode", "name": "typeStorageCode", "autoWidth": true },
                    { "data": "typeStorageName", "name": "typeStorageName", "autoWidth": true },
                    { "data": "archiveUnitName", "name": "archive.archiveUnitName", "autoWidth": true },
                    { "data": "companyName", "name": "archive.company.companyName", "autoWidth": true }
                ]
            });

            $('#btnUpload').on('click', function () {
                var fileExtension = ['xls', 'xlsx'];
                var filename = $('#fUpload').val();
                if (filename.length == 0) {
                    alert("Please select a file.");
                    return false;
                }
                else {
                    var extension = filename.replace(/^.*\./, '');
                    if ($.inArray(extension, fileExtension) == -1) {
                        alert("Please select only excel files.");
                        return false;
                    }
                }
                $("#frmTypeStorageUpload").submit();
            });
        });
    </script>
}