@using Ardita.Globals;
@model Ardita.Models.DbModels.TrxRow
@using Ardita.Models.ViewModels;

@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    Layout = Const.ViewStart;
    FormModel form = Html.Form();
}

<div class="row wrapper border-bottom white-bg page-heading">
    <div class="col-lg-10">
        <h2>Row</h2>
        <ol class="breadcrumb">
            <li class="breadcrumb-item">
                <a href="@Url.Action(Const.Index, Const.Home, new {Area = Const.General})"><i class="fa fa-home"></i></a>
            </li>
            <li class="breadcrumb-item">
                Master Data
            </li>
            <li class="breadcrumb-item">
                <a href="@Url.Action(Const.Index, Const.Row, new {Area = Const.MasterData})">Row</a>
            </li>
            <li class="active breadcrumb-item">
                <strong>@form.LastBreadcrumb</strong>
            </li>
        </ol>
    </div>
    <div class="col-lg-2">
    </div>
</div>
<div class="wrapper wrapper-content animated fadeInRight">
    <div class="row">
        <div class="col-lg-12">
            <div class="ibox ">
                <div class="ibox-title">
                    <h5>Row</h5>
                    <div class="ibox-tools">
                        <a class="collapse-link">
                            <i class="fa fa-chevron-up"></i>
                        </a>
                        <a class="dropdown-toggle" data-toggle="dropdown" href="form_basic.html#">
                            <i class="fa fa-wrench"></i>
                        </a>
                        <ul class="dropdown-menu dropdown-user">
                            <li>
                                <a href="form_basic.html#" class="dropdown-item">Config option 1</a>
                            </li>
                            <li>
                                <a href="form_basic.html#" class="dropdown-item">Config option 2</a>
                            </li>
                        </ul>
                        <a class="close-link">
                            <i class="fa fa-times"></i>
                        </a>
                    </div>
                </div>
                <div class="ibox-content">
                    <div class="row">
                        <div class="col-sm-6 b-r">
                            <form id="frmPosition" method="post" role="form" enctype="multipart/form-data" asp-controller="@form.CurrentController" asp-area="@form.CurrentArea" asp-action="@form.FormAction" )">
                                @Html.AntiForgeryToken()
                                <div class="form-group">
                                    <div class="form-group">
                                        <label>Unit Kearsipan</label>
                                        <input type="hidden" value="@Model.RowId" asp-for="RowId" />

                                        <select asp-items="ViewBag.listArchiveUnits"
                                                id="txtUnitArchive" class="select2_demo_1 form-control"
                                                data-placeholder="-- Pilih Unit Kearsipan --">
                                            <option value=""></option>
                                        </select>
                                    </div>
                                    <div class="form-group">
                                        <label>Lantai</label>
                                        <select asp-items="ViewBag.listFloors"
                                                id="txtFloorId" class="select2_demo_1 form-control"
                                                data-placeholder="-- Pilih Lantai --">
                                            <option value=""></option>
                                        </select>
                                    </div>
                                    <div class="form-group">
                                        <label>Ruangan</label>
                                        <select asp-items="ViewBag.listRooms"
                                                id="txtRoomId" class="select2_demo_1 form-control"
                                                data-placeholder="-- Pilih Ruangan --">
                                            <option value=""></option>
                                        </select>
                                    </div>
                                    <div class="form-group">
                                        <label>Rak</label>
                                        <select  asp-items="ViewBag.listRacks"
                                                id="txtRackId" class="select2_demo_1 form-control"
                                                data-placeholder="-- Pilih Rak --">
                                            <option value=""></option>
                                        </select>
                                    </div>
                                    <div class="form-group">
                                        <label>Tingkat</label>
                                        <select asp-for="LevelId" asp-items="ViewBag.listLevels"
                                                id="txtLevelId" class="select2_demo_1 form-control"
                                                data-placeholder="-- Pilih Tingkat --">
                                            <option value=""></option>
                                        </select>
                                    </div>
                                   
                                    <div class="form-group">
                                        <label>Kode Baris</label>
                                        <input type="text" placeholder="" id="txtRowCode" class="form-control" asp-for="RowCode" value="@Model.RowCode">
                                    </div>
                                    <div class="form-group">
                                        <label>Nama Baris</label>
                                        <input type="text" placeholder="" id="txtRowName" class="form-control" asp-for="RowName" value="@Model.RowName">
                                    </div>
                                </div>
                                <div>
                                    <a href="@Url.Action(Const.Index, Const.Row, new {Area = Const.MasterData})" class="btn btn-sm btn-danger float-right m-t-n-xs">Cancel</a>
                                    @if (form.isInput)
                                    {
                                        <button class="btn btn-sm btn-primary float-right m-t-n-xs mr-1" type="submit">Submit</button>
                                    }
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

</div>
@section Scripts {
    <script type="text/javascript">

    </script>
}