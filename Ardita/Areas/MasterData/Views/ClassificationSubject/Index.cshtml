@using Ardita.Extensions;
@using Ardita.Models.ViewModels;
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    Layout = GlobalConst.ViewStart;
    FormModel form = Html.Form();
}
<div class="row wrapper border-bottom white-bg page-heading">
    <div class="col-lg-10">
        <h2>Subject Classification</h2>
        <ol class="breadcrumb">
            <li class="breadcrumb-item">
                <a href="@Url.Action(GlobalConst.Index, GlobalConst.Home, new { Area = GlobalConst.General })"><i class="fa fa-home"></i></a>
            </li>
            <li class="breadcrumb-item">
                Master Data
            </li>
            <li class="active breadcrumb-item">
                <strong>Subject Classification</strong>
            </li>
        </ol>
    </div>
    <div class="col-lg-2">
    </div>
</div>
<div class="wrapper wrapper-content animated fadeInRight">
    <div class="row">
        <div class="col-lg-12">
            <div class="ibox ">
                <div class="ibox-title">
                    <h5>Subject Classification</h5>
                    <div class="ibox-tools">
                        <a href="@Url.Action("Add", "ClassificationSubject", new { Area = "MasterData"})" class="btn btn-sm btn-primary"><i class="fa fa-pencil"></i><span class="bold"> New</span></a>
                        <a href="@Url.Action("Export", "ClassificationSubject", new { Area = "MasterData"})" class="btn btn-sm btn-info"><i class="fa fa-download"></i><span class="bold"> Export</span></a>
                        <a href="@Url.Action(GlobalConst.UploadForm, @form.CurrentController, new { Area = @form.CurrentArea})" class="btn btn-sm btn-success"><i class="fa fa-upload"></i><span class="bold"> Upload</span></a>

                    </div>
                </div>
                <div class="ibox-content">
                    <table id="tbl" class="table table-striped table-hover dataTables-example" style="width:100%">
                        <thead>
                            <tr>
                                <th>No</th>
                                <th>Action</th>
                                <th>Kode Subyek Klasifikasi</th>
                                <th>Nama Subyek Klasifikasi</th>
                                <th>Kode Klasifikasi</th>
                                <th>Nama Klasifikasi</th>
                            </tr>
                        </thead>
                        <tbody></tbody>
                    </table>
                </div>
            </div>
        </div>
      
    </div>
</div>
@section Scripts {
    <script type="text/javascript">

        $(document).ready(function () {
            bsCustomFileInput.init();
            var table = $('#tbl').DataTable({
                processing: true,
                serverSide: true,
                scrollX: true,
                filter: true,
                ajax: {
                    "url": '@Url.Action("GetData", "ClassificationSubject", new { Area = "MasterData"})',
                    "type": "POST",
                    "datatype": "json"
                },
                columnDefs: [
                    {
                        width: 50, targets: 0
                    }
                ],
                fixedColumns: true,
                columns: [
                    {
                        "data": "subjectClassificationId", "name": "subjectClassificationId", "orderable": false, "searchable": false, "render": function (data, type, row, meta) {
                            return meta.row + meta.settings._iDisplayStart + 1;
                        }
                    },
                    {
                        "data": "subjectClassificationId", "name": "subjectClassificationId", "orderable": false, "searchable": false,
                        "render": function (data, type, row, meta) {
                            var detail = `<a class="btn btn-sm btn-warning" href="@Url.Action("Detail", "ClassificationSubject", new { Area = "MasterData", Id = -1 })"><i class="fa fa-eye"></i> </a>`;
                            detail = detail.replace("-1", data);

                            var edit = `<a class="btn btn-sm btn-primary" href="@Url.Action("Update", "ClassificationSubject", new { Area = "MasterData", Id = -1 })"><i class="fa fa-pencil"></i> </a>`;
                            edit = edit.replace("-1", data);

                            var remove = `<a class="btn btn-sm btn-danger" href="@Url.Action("Remove", "ClassificationSubject", new { Area = "MasterData", Id = -1 })"><i class="fa fa-trash"></i> </a>`;
                            remove = remove.replace("-1", data);

                            var JoinButton = '<div style="width:100px">' + edit.concat(" ", detail).concat(" ", remove);
                            return JoinButton;
                        }
                    },
                    { "data": "subjectClassificationCode", "name": "subjectClassificationCode", "autoWidth": true },
                    { "data": "subjectClassificationName", "name": "subjectClassificationName", "autoWidth": true },
                    { "data": "classificationCode", "name": "classification.classificationCode", "autoWidth": true },
                    { "data": "classificationName", "name": "classification.classificationName", "autoWidth": true },
                ],
                buttons: [
                    { extend: 'excel', title: 'user-data' },
                ]
            });
            $('#btnUpload').on('click', function () {
                var fileExtension = ['xls', 'xlsx'];
                var filename = $('#fUpload').val();
                if (filename.length == 0) {
                    alert("Please select a file.");
                    return false;
                }
                else {
                    var extension = filename.replace(/^.*\./, '');
                    if ($.inArray(extension, fileExtension) == -1) {
                        alert("Please select only excel files.");
                        return false;
                    }
                }
                var fdata = new FormData();
                var fileUpload = $("#fUpload").get(0);
                var files = fileUpload.files;
                fdata.append(files[0].name, files[0]);
                $.ajax({
                    type: "POST",
                    url: '@Url.Action("Upload", "ClassificationSubject", new { Area = "MasterData" })',
                    beforeSend: function (xhr) {
                        xhr.setRequestHeader("XSRF-TOKEN",
                            $('input:hidden[name="__RequestVerificationToken"]').val());
                    },
                    data: fdata,
                    contentType: false,
                    processData: false,
                    success: function (response) {
                        window.location.reload();
                    },
                    error: function (e) {
                        alert(e.responseText);
                    }
                });
            });
        });
    </script>
}