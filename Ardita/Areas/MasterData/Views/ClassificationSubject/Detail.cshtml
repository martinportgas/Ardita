@model Ardita.Models.DbModels.TrxSubjectClassification
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row wrapper border-bottom white-bg page-heading">
    <div class="col-lg-10">
        <h2>Subject Classification</h2>
        <ol class="breadcrumb">
            <li class="breadcrumb-item">
                <a href="@Url.Action("Index", "Home", new {Area = "General"})"><i class="fa fa-home"></i></a>
            </li>
            <li class="breadcrumb-item">
                Master Data
            </li>
            <li class="breadcrumb-item">
                <a href="@Url.Action("Index", "ClassificationSubject", new {Area = "MasterData"})">Subject Classification</a>
            </li>
            <li class="active breadcrumb-item">
                <strong>Detail</strong>
            </li>
        </ol>
    </div>
    <div class="col-lg-2">
    </div>
</div>
<div class="wrapper wrapper-content animated fadeInRight">
    <div class="row">
        <div class="col-lg-12">
            <div class="ibox ">
                <div class="ibox-title">
                    <h5>Subject Classification</h5>
                    <div class="ibox-tools">
                        <a class="collapse-link">
                            <i class="fa fa-chevron-up"></i>
                        </a>
                        <a class="dropdown-toggle" data-toggle="dropdown" href="form_basic.html#">
                            <i class="fa fa-wrench"></i>
                        </a>
                        <ul class="dropdown-menu dropdown-user">
                            <li>
                                <a href="form_basic.html#" class="dropdown-item">Config option 1</a>
                            </li>
                            <li>
                                <a href="form_basic.html#" class="dropdown-item">Config option 2</a>
                            </li>
                        </ul>
                        <a class="close-link">
                            <i class="fa fa-times"></i>
                        </a>
                    </div>
                </div>
                <div class="ibox-content">
                    <div class="row">
                        <div class="col-sm-6 b-r">
                            <form id="frmPosition" role="form" enctype="multipart/form-data" asp-controller="ClassificationSubject" asp-area="MasterData" asp-action="Save">
                                <div class="form-group">
                                    <div class="form-group">
                                        <label>Jenis Klasifikasi</label>
                                        <input type="hidden" asp-for="SubjectClassificationId" value="@Model.SubjectClassificationId">
                                        <select id="txtTypeClassificationId" class="select2_demo_1 form-control" asp-for="TypeClassificationId" asp-items="ViewBag.listClassificationType" data-placeholder="-- Pilih Jenis Klasifikasi --" disabled><option value=""></option></select>
                                    </div>
                                    <div class="form-group">
                                        <label>Klasifikasi</label>
                                        <select id="txtClassificationId" class="select2_demo_1 form-control" asp-for="ClassificationId" asp-items="ViewBag.listClassification" data-placeholder="-- Pilih Klasifikasi --" disabled><option value=""></option></select>
                                    </div>
                                    <div class="form-group">
                                        <label>Kode Subjek Klasifikasi</label>
                                        <input type="text" placeholder="" id="txtPositionClassificationName" class="form-control" asp-for="SubjectClassificationCode" disabled>
                                    </div>
                                    <div class="form-group">
                                        <label>Nama Subject Klasifikasi</label>
                                        <input type="text" placeholder="" id="txtPositionClassificationName" class="form-control" asp-for="SubjectClassificationName" disabled>
                                    </div>
                                </div>
                                <div>
                                    <a href="@Url.Action("Index", "ClassificationSubject", new { Area = "MasterData" })" class="btn btn-sm btn-danger float-right m-t-n-xs">Back</a>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

</div>
@section Scripts {
    <script type="text/javascript">
        function validate() {
            if ($('#txtPositionClassificationCode').val() == "") {
                swal("Please enter Classification Code !");
                return false;
            } else if ($('#txtPositionClassificationName').val() == "") {
                swal("Please enter Classification Name !");
                return false;
            } else {
                return true;
            }
        }

        function onSubmit(ctl, event) {
            event.preventDefault();
            swal({
                title: "Do you want to save it?",
                text: "Please check Information before Submiting!",
                type: "warning",
                showCancelButton: true,
                confirmButtonColor: "#DD6B55",
                confirmButtonText: "Save",
                cancelButtonText: "Cancel",
                closeOnConfirm: false,
                closeOnCancel: false
            },
                function (isConfirm) {
                    if (isConfirm) {
                        if (validate() == true) {
                            $("#frmPosition").submit();
                        }
                    } else {
                        swal("Cancelled", "You have Cancelled Form Submission!", "error");
                    }
                });
        }
    </script>
}