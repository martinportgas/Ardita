@using Ardita.Globals;
@model Ardita.Models.DbModels.TrxRoom
@using Ardita.Models.ViewModels;

@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    Layout = Const.ViewStart;
    FormModel form = Html.Form();
}

<div class="row wrapper border-bottom white-bg page-heading">
    <div class="col-lg-10">
        <h2>@Const.Room</h2>
        <ol class="breadcrumb">
            <li class="breadcrumb-item">
                <a href="@Url.Action(Const.Index, Const.Home, new {Area = Const.General})"><i class="fa fa-home"></i></a>
            </li>
            <li class="breadcrumb-item">
                Master Data
            </li>
            <li class="breadcrumb-item">
                <a href="@Url.Action(Const.Index, Const.Room, new {Area = Const.MasterData})">@Const.Room</a>
            </li>
            <li class="active breadcrumb-item">
                <strong>@form.LastBreadcrumb</strong>
            </li>
        </ol>
    </div>
    <div class="col-lg-2">
    </div>
</div>
<div class="wrapper wrapper-content animated fadeInRight">
    <div class="row">
        <div class="col-lg-12">
            <div class="ibox ">
                <div class="ibox-title">
                    <h5>Room</h5>
                    <div class="ibox-tools">
                        <a class="collapse-link">
                            <i class="fa fa-chevron-up"></i>
                        </a>
                        <a class="dropdown-toggle" data-toggle="dropdown" href="form_basic.html#">
                            <i class="fa fa-wrench"></i>
                        </a>
                        <ul class="dropdown-menu dropdown-user">
                            <li>
                                <a href="form_basic.html#" class="dropdown-item">Config option 1</a>
                            </li>
                            <li>
                                <a href="form_basic.html#" class="dropdown-item">Config option 2</a>
                            </li>
                        </ul>
                        <a class="close-link">
                            <i class="fa fa-times"></i>
                        </a>
                    </div>
                </div>
                <div class="ibox-content">
                    <div class="row">
                        <div class="col-sm-6 b-r">
                            <form id="frmRoom" method="post" role="form" enctype="multipart/form-data" asp-controller="@form.CurrentController" asp-area="@form.CurrentArea" asp-action="@form.FormAction" )">
                                @Html.AntiForgeryToken()
                                <div class="form-group">
                                    <div class="form-group">
                                        <label>Unit Kearsipan</label>
                                        <input type="hidden" value="@Model.RoomId" asp-for="RoomId" />

                                        <select asp-items="ViewBag.listArchiveUnits"
                                                id="txtUnitArchive" class="select2_demo_1 form-control"
                                                data-placeholder="-- Pilih Unit Kearsipan --"
                                                onchange="loadFloors(this)"
                                        >
                                            <option value=""></option>
                                        </select>
                                    </div>
                                    <div class="form-group">
                                        <label>Lantai</label>
                                        <select asp-for="FloorId" asp-items="ViewBag.listFloors"
                                                id="txtFloorId" class="select2_demo_1 form-control"
                                                data-placeholder="-- Pilih Lantai --">
                                            <option value=""></option>
                                        </select>
                                    </div>
                                    <div class="form-group">
                                        <label>Kode Ruangan</label>
                                        <input type="text" placeholder="" id="txtRoomCode" class="form-control" asp-for="RoomCode" value="@Model.RoomCode">
                                    </div>
                                    <div class="form-group">
                                        <label>Nama Ruangan</label>
                                        <input type="text" placeholder="" id="txtRoomName" class="form-control" asp-for="RoomName" value="@Model.RoomName">
                                    </div>
                                    <div class="form-group">
                                        <label>Tipe Ruangan</label>

                                        <select asp-for="ArchiveRoomType" asp-items="ViewBag.listTypeOfRooms"
                                                id="txtUnitArchive" class="select2_demo_1 form-control"
                                                data-placeholder="-- Pilih Tipe Ruangan --">
                                            <option value=""></option>
                                            <option value="Unit Pengelola">Unit Pengelola</option>
                                            <option value="Unit Kearsipan">Unit Kearsipan</option>
                                        </select>
                                    </div>
                                </div>
                                <div>
                                    <a href="@Url.Action(Const.Index, Const.Room, new {Area = Const.MasterData})" class="btn btn-sm btn-danger float-right m-t-n-xs" id="btn-cancel">Cancel</a>
                                    <button onclick="onSubmit(this, event);" class="btn btn-sm btn-primary float-right m-t-n-xs mr-1" type="submit" id="btn-submit">@form.FormAction</button>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

</div>
@section Scripts {
    <script type="text/javascript">
        $(function () {
            initForms("@form.CurrentAction");

            $("#txtUnitArchive").select2({
                theme: 'bootstrap4',
            });
            $("#txtFloorId").select2({
                theme: 'bootstrap4',
            });
        });

        function validate() {
            if ($('#txtRoomCode').val() == "") {
                swal("Please enter Room Code !");
                return false;
            } else if ($('#txtRoomName').val() == "") {
                swal("Please enter Room Name !");
                return false;
            } else {
                return true;
            }
        }
        function onSubmit(ctl, event) {
            event.preventDefault();
            swal({
                title: "Do You Want To @form.CurrentAction It?",
                text: "Please check Information before Submiting!",
                type: "warning",
                showCancelButton: true,
                confirmButtonColor: "#DD6B55",
                confirmButtonText: "Save",
                cancelButtonText: "Cancel",
                closeOnConfirm: false,
                closeOnCancel: false
            },
                function (isConfirm) {
                    if (isConfirm) {
                        if (validate() == true) {
                            $('.confirm').prop('disabled', true);
                            $('.cancel').prop('disabled', true);
                            $('.cancel').hide();
                            $("#frmRoom").submit();
                        }
                    } else {
                        swal("Cancelled", "You have Cancelled Form Submission!", "error");
                    }
                });
        }
        
        
        function loadFloors(obj) {
            var value = obj.value;
            var url = '@Url.Action(Const.BindFloorsByArchiveUnitId, Const.Room, new { Area = Const.MasterData })';

            $.post(url, { id: value }, function (data) {
                console.log(data);
                PopulateDropDown("#txtFloorId", data);
            });
        }
        function PopulateDropDown(dropDownId, list, selectedId) {
            $(dropDownId).empty();
            $(dropDownId).append("<option>-- Silahkan Pilih --</option>")
            $.each(list, function (index, row) {
                console.log(row);
                $(dropDownId).append("<option value='" + row.floorId + "'>" + row.floorName + "</option>")
            });
        }
    </script>
}