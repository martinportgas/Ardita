@using Ardita.Extensions;
@model Ardita.Models.DbModels.MstGmd;
@using Ardita.Models.ViewModels;

@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    Layout = GlobalConst.ViewStart;
    FormModel form = Html.Form();
}

<div class="row wrapper border-bottom white-bg page-heading">
    <div class="col-lg-10">
        <h2>Data</h2>
        <ol class="breadcrumb">
            <li class="breadcrumb-item">
                <a href="@Url.Action(GlobalConst.Index, @form.CurrentController, new { Area = @form.CurrentArea})">Gmd</a>
            </li>
            <li class="active breadcrumb-item">
                <strong>Data</strong>
            </li>
            <li class="active breadcrumb-item">
                <strong>@form.LastBreadcrumb</strong>
            </li>
        </ol>
    </div>
    <div class="col-lg-2"> 
    </div>
</div>

<div class="wrapper wrapper-content animated fadeInRight">
    <div class="row">
        <div class="col-lg-12">
            <div class="ibox ">
                <div class="ibox-title">
                    <h5>Gmd</h5>
                </div>
                <div class="ibox-content">
                    <div class="row">
                        <div class="col-sm-12">
                            <form role="form" id="frmGmd" enctype="multipart/form-data" asp-controller=@form.CurrentController asp-area=@form.CurrentArea asp-action=@form.FormAction>
                                <div class="row">
                                    <div class="col-sm-6 b-r">
                                        <div class="form-group">
                                            <label>Gmd Code</label>
                                            <input type="text" placeholder="" id="txtGmdCode" class="form-control" asp-for="@Model.GmdCode">
                                            <input type="hidden" placeholder="" id="txtGmdId" class="form-control" asp-for="@Model.GmdId">
                                        </div>
                                        <div class="form-group">
                                            <label>Gmd Name</label>
                                            <input type="text" placeholder="" id="txtGmdName" class="form-control" asp-for="@Model.GmdName">
                                        </div>

                                        <div>
                                            <a href="@Url.Action(GlobalConst.Index, @form.CurrentController, new { Area = @form.CurrentArea })" class="btn btn-sm btn-default float-right m-t-n-xs" id="btn-cancel">@Html.Raw(form.BackText)</a>
                                            @if (form.isSubmitForm)
                                            {
                                                <button onclick="onSubmit(this, event);" class="btn btn-sm @form.ButtonSubmitClass float-right m-t-n-xs mr-1" type="submit" id="btn-submit">@Html.Raw(form.SaveText)</button>
                                            }
                                        </div>
                                    </div>
                                    <div class="col-sm-6">
                                        @if (form.isInput)
                                        {
                                            <div class="form-group">
                                                <label>Gmd Detail Name</label>
                                                <input type="text" placeholder="" id="txtDetailName" class="form-control">
                                            </div>
                                            <div class="form-group">
                                                <label>Unit</label>
                                                <input type="text" placeholder="" id="txtDetailUnit" class="form-control">
                                            </div>
                                            <div class="form-group">
                                                <button type="button" class="btn float-right m-t-n-xs btn-primary" id="btn-add-detail"><i class="fa fa-plus"></i> Add Detail</button>
                                            </div>
                                        }
                                        
                                        <table class="table table-striped table-hover dataTables-example mt-5" style="width:100%">
                                            <thead>
                                                <tr>
                                                    <th width="10%">Action</th>
                                                    <th>Gmd Detail Name</th>
                                                    <th>Unit</th>
                                                </tr>
                                            </thead>
                                            <tbody class="detail">
                                                
                                            </tbody>
                                        </table>
                                    </div>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

</div>


@section Scripts {
    <script type="text/javascript">
        var isInput = @form.isInput.ToString().ToLower();
        $(document).ready(function () {
            initForms("@form.CurrentAction");

            $("#btn-add-detail").click(function () {
                initDetail($("#txtDetailName").val(), $("#txtDetailUnit").val());
            });

            if ("@form.CurrentAction" != "@GlobalConst.Add") 
            {
                @foreach (var d in Model.MstGmdDetails)
                {
                    @:initDetail("@d.Name", "@d.Unit");
                }
            }

            $('.delete').click(function () {
                
            });
        });

        function deleteRow(param) {
            $(param).closest('tr').remove();
            return false;
        }

        function initDetail(name, unit) {
            if(name === "" || unit === "") {
                alert("Please Input Detail Name and Unit");
                return false;
            }
            $(".detail").append(`<tr><td>${isInput ? '<i class="fa fa-trash" onclick="deleteRow(this)"></i>' : ''}</td><td>${name}</td><td>${unit}</td></tr><input type="hidden" name="detail[]" value="${name}#${unit}">`);

            $("#txtDetailName").val("");
            $("#txtDetailUnit").val("");
        }

        function validate() {
            if ($('#txtGmdCode').val() == "") {
                swal("Please enter Gmd Code !");
                return false;
            } else if ($('#txtGmdName').val() == "") {
                swal("Please enter Gmd Name !");
                return false;
            } else {
                return true;
            }
        }

        function onSubmit(ctl, event) {
            event.preventDefault();
            swal({
                title: "Do You Want To @form.CurrentAction It?",
                text: "Please check Information before Submiting!",
                type: "warning",
                showCancelButton: true,
                confirmButtonColor: "#DD6B55",
                confirmButtonText: "Save",
                cancelButtonText: "Cancel",
                closeOnConfirm: false,
                closeOnCancel: false
            },
                function (isConfirm) {
                    if (isConfirm) {
                        if (validate() == true) {
                            $('.confirm').prop('disabled', true);
                            $('.cancel').prop('disabled', true);
                            $('.cancel').hide();
                            $("#frmGmd").submit();
                        }
                    } else {
                        swal("Cancelled", "You have Cancelled Form Submission!", "error");
                    }
                });
        }

    </script>
}