@using Ardita.Extensions;
@using Ardita.Models.ViewModels;
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    Layout = GlobalConst.ViewStart;
    FormModel form = Html.Form();
}
<div class="row wrapper border-bottom white-bg page-heading">
    <div class="col-lg-10">
        <h2>Levels</h2>
        <ol class="breadcrumb">
            <li class="breadcrumb-item">
                <a href="@Url.Action(GlobalConst.Index, GlobalConst.Home, new { Area = GlobalConst.General })"><i class="fa fa-home"></i></a>
            </li>
            <li class="breadcrumb-item">
                Master Data
            </li>
            <li class="active breadcrumb-item">
                <strong>Level</strong>
            </li>
        </ol>
    </div>
    <div class="col-lg-2">
    </div>
</div>
<div class="wrapper wrapper-content animated fadeInRight">
    <div class="row">
        <div class="col-lg-12">
            <div class="ibox ">
                <div class="ibox-title">
                    <h5>Level</h5>
                    <div class="ibox-tools">
                        <a href="@Url.Action(GlobalConst.Add, GlobalConst.Level, new { Area = GlobalConst.MasterData})" class="btn btn-sm btn-primary"><i class="fa fa-pencil"></i><span class="bold"> New</span></a>
                        <a href="@Url.Action(GlobalConst.Export, GlobalConst.Level, new { Area = GlobalConst.MasterData })" class="btn btn-sm btn-info"><i class="fa fa-download"></i><span class="bold"> Export</span></a>
                        <a href="@Url.Action(GlobalConst.UploadForm, @form.CurrentController, new { Area = @form.CurrentArea})" class="btn btn-sm btn-success"><i class="fa fa-upload"></i><span class="bold"> Upload</span></a>

                    </div>
                </div>
                <div class="ibox-content">
                    <table id="tblLevel" class="table table-striped table-hover dataTables-example" style="width:100%">
                        <thead>
                            <tr>
                                <th>No</th>
                                <th>Action</th>
                                <th>Kode Tingkat</th>
                                <th>Nama Tingkat</th>
                                <th>Rak</th>
                                <th>Nama Ruangan</th>
                                <th>Nama Lantai</th>
                                <th>Unit Kearsipan</th>
                            </tr>
                        </thead>
                        <tbody></tbody>
                    </table>
                </div>
            </div>
        </div>
       
    </div>
</div>
@section Scripts {
    <script type="text/javascript">

        $(document).ready(function () {
            bsCustomFileInput.init();
            var table = $('#tblLevel').DataTable({
                processing: true,
                serverSide: true,
                scrollX: true,
                filter: true,
                ajax: {
                    "url": '@Url.Action(GlobalConst.GetData, GlobalConst.Level, new { Area = GlobalConst.MasterData})',
                    "type": "POST",
                    "datatype": "json"
                },
                columnDefs: [
                    {
                        width: 50, targets: 0
                    }
                ],
                fixedColumns: true,
                columns: [
                    {
                        "data": "levelId", "name": "levelId", "orderable": false, "searchable": false, "render": function (data, type, row, meta) {
                            return meta.row + meta.settings._iDisplayStart + 1;
                        }
                    },
                    {
                        "data": "levelId", "name": "levelId", "orderable": false, "searchable": false,
                        "render": function (data, type, row, meta) {
                            var detail = `<a class="btn btn-sm btn-warning" href="@Url.Action("Detail", "Level", new { Area = "MasterData", Id = -1 })"><i class="fa fa-eye"></i> </a>`;
                            detail = detail.replace("-1", row.levelId);

                            var edit = `<a class="btn btn-sm btn-primary" href="@Url.Action("Update", "Level", new { Area = "MasterData", Id = -1 })"><i class="fa fa-pencil"></i> </a>`;
                            edit = edit.replace("-1", row.levelId);

                            var remove = `<a class="btn btn-sm btn-danger" href="@Url.Action("Remove", "Level", new { Area = "MasterData", Id = -1 })"><i class="fa fa-trash"></i> </a>`;
                            remove = remove.replace("-1", row.levelId);

                            var JoinButton = '<div style="width:100px">' + edit.concat(" ", detail).concat(" ", remove);
                            return JoinButton;
                        }
                    },
                    { "data": "levelCode", "name": "levelCode", "autoWidth": true },
                    { "data": "levelName", "name": "levelName", "autoWidth": true },
                    { "data": "rackName", "name": "rack.rackName", "autoWidth": true },
                    { "data": "roomName", "name": "rack.room.roomName", "autoWidth": true },
                    { "data": "floorName", "name": "rack.room.floor.floorName", "autoWidth": true },
                    { "data": "archiveUnitName", "name": "rack.room.floor.archiveUnit.archiveUnitName", "autoWidth": true },
                ]
            });

          
        });
    </script>
}