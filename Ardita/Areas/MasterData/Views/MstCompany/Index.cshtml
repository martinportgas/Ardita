@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row wrapper border-bottom white-bg page-heading">
    <div class="col-lg-10">
        <h2>Companies</h2>
        <ol class="breadcrumb">
            <li class="breadcrumb-item">
                <a href="@Url.Action("Index", "Home")"><i class="fa fa-home"></i></a>
            </li>
            <li class="breadcrumb-item">Master Data</li>
            <li class="active breadcrumb-item"><strong>Master Company</strong></li>
        </ol>
    </div>
</div>

<div class="wrapper wrapper-content animated fadeInRight">
    <div class="row">
        <div class="col-lg-12">
            <div class="ibox ">
                <div class="ibox-title">
                    <h5>Users</h5>
                    <div class="ibox-tools">
                        <a href="@Url.Action("Add", "MstCompany", new { Area = "MasterData"})" class="btn btn-sm btn-primary"><i class="fa fa-pencil"></i><span class="bold"> New</span></a>
                        <a href="@Url.Action("Export", "User", new { Area = "UserManage"})" class="btn btn-sm btn-primary"><i class="fa fa-download"></i><span class="bold"> Export</span></a>
                        <button id="btnShowUpload" class="btn btn-sm btn-success" data-toggle="modal" data-target="#formUpload"><i class="fa fa-upload"></i><span class="bold"> Upload</span></button>
                    </div>
                </div>
                <div class="ibox-content">
                    <table id="tblCompany" class="table table-striped table-hover dataTables-example" style="width:100%">
                        <thead>
                            <tr>
                                <th>No</th>
                                <th>Action</th>
                                <th>Code</th>
                                <th>Name</th>
                                <th>Address</th>
                                <th>Telephone</th>
                                <th>Email</th>
                            </tr>
                        </thead>
                        <tbody></tbody>
                    </table>
                </div>
            </div>
        </div>
        <!--Modal-->
        <div class="modal inmodal" id="formUpload" tabindex="-1" role="dialog" aria-hidden="true">
            <div class="modal-dialog">
                <div class="modal-content animated fadeIn">
                    <div class="modal-header">
                        <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
                        <h4 class="modal-title">User Upload</h4>
                        <small>Pastikan format file anda sudah benar.</small>
                    </div>
                    <div class="modal-body">
                        <form>
                            <div class="row">
                                <div class="input-group">
                                    <div class="custom-file">
                                        <input type="file" id="fUpload" name="files" class="custom-file-input" />
                                        <label class="custom-file-label" for="inputGroupFile01">Choose file</label>
                                    </div>
                                </div>
                            </div>
                            <br />
                        </form>
                    </div>  
                    <div class="modal-footer">
                        <a id="btnDownloadTemplate" href="@Url.Action("DownloadTemplate", "User", new { Area="UserManage"})" class="btn btn-sm btn-default"><i class="fa fa-download"></i><span class="bold"> Template</span></a>
                        <button id="btnUpload" class="btn btn-sm btn-default"><i class="fa fa-upload"></i><span class="bold"> Upload</span></button>
                        <button type="button" class="btn btn-white" data-dismiss="modal">Close</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


@section Scripts {
    <script type="text/javascript">
        $(document).ready(function () {
            bsCustomFileInput.init();

            var table = $('#tblCompany').DataTable({
                processing: true,
                serverSide: true,
                scrollX: true,
                filter: true,
                ajax: {
                    "url": '@Url.Action("GetData", "MstCompany", new { Area = "MasterData"})',
                    "type": "POST",
                    "datatype": "json"
                },
                columnDefs: [
                    {
                        width: 50, targets: 0
                    }
                ],
                fixedColumns: true,
                columns: [
                    {
                        "data": "companyId", "orderable": false, "searchable": false, "render": function (data, type, row, meta) {
                            return meta.row + meta.settings._iDisplayStart + 1;
                        }
                    },
                    {
                        "data": "companyId",
                        "render": function (data, type, row, meta) {
                            var edit = `<a class="btn btn-sm btn-default" href="@Url.Action("Update", "User", new { Area = "UserManage", Id = -1 })"><i class="fa fa-pencil"></i> </a>`;
                            edit = edit.replace("-1", row.companyId);

                            var remove = `<a class="btn btn-sm btn-danger" href="@Url.Action("Remove", "User", new { Area = "UserManage", Id = -1 })"><i class="fa fa-trash"></i> </a>`;
                            remove = remove.replace("-1", row.companyId);

                            var JoinButton = edit.concat(" ", remove);
                            return JoinButton;
                        }
                    },
                    { "data": "companyCode", "Code": "CompanyCode", "autoWidth": true },
                    { "data": "companyName", "Name": "CompanyName", "autoWidth": true },
                    { "data": "address", "Address": "Address", "autoWidth": true },
                    { "data": "telepone", "Telepone": "Telepone", "autoWidth": true },
                    { "data": "email", "Email": "Email", "autoWidth": true }
                ]
            });

            $('#btnUpload').on('click', function () {
                var fileExtension = ['xls', 'xlsx'];
                var filename = $('#fUpload').val();
                if (filename.length == 0) {
                    alert("Please select a file.");
                    return false;
                }
                else {
                    var extension = filename.replace(/^.*\./, '');
                    if ($.inArray(extension, fileExtension) == -1) {
                        alert("Please select only excel files.");
                        return false;
                    }
                }
                var fdata = new FormData();
                var fileUpload = $("#fUpload").get(0);
                var files = fileUpload.files;
                fdata.append(files[0].name, files[0]);
                $.ajax({
                    type: "POST",
                    url: '@Url.Action("Upload", "User", new { Area = "UserManage" })',
                    beforeSend: function (xhr) {
                        xhr.setRequestHeader("XSRF-TOKEN",
                            $('input:hidden[name="__RequestVerificationToken"]').val());
                    },
                    data: fdata,
                    contentType: false,
                    processData: false,
                    success: function (response) {
                        window.location.reload();
                    },
                    error: function (e) {
                        alert(e.responseText);
                    }
                });
            });


        });
    </script>
}