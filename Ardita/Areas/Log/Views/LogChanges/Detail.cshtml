@using Ardita.Extensions;
@using Ardita.Models.ViewModels;
@using System.Data;
@using Newtonsoft.Json;
@model Ardita.Models.DbModels.LogChange;
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    Layout = GlobalConst.ViewStart;
    FormModel form = Html.Form();
    DataTable dtNew = Model.NewValue == null ? new DataTable() : JsonConvert.DeserializeObject<DataTable>(Model.NewValue)!;
    DataTable dtOld = Model.OldValue == null ? new DataTable() : JsonConvert.DeserializeObject<DataTable>(Model.OldValue)!;
}

<div class="row wrapper border-bottom white-bg page-heading">
    <div class="col-lg-10">
        <h2>Archive</h2>
        <ol class="breadcrumb">
            <li class="breadcrumb-item">
                <a href="@Url.Action(GlobalConst.Index, GlobalConst.Home, new { Area = GlobalConst.General })"><i class="fa fa-home"></i></a>
            </li>
            <li class="breadcrumb-item">
                Log
            </li>
            <li class="active breadcrumb-item">
                <strong>Log Perubahan</strong>
            </li>
        </ol>
    </div>
    <div class="col-lg-2">
    </div>
</div>
<div class="wrapper wrapper-content animated fadeInRight">
    <div class="row">
        <div class="col-lg-12">
            <div class="ibox ">
                <div class="ibox-title">
                    <h5>Upload Data</h5>
                    <div class="ibox-tools">
                    </div>
                </div>
                <div class="ibox-content">
                    <div class="row">
                        <div class="col-sm-12">
                            <div class="form-group">
                                <label>Username</label>
                                <input type="text" class="form-control" asp-for="Username" disabled />
                            </div>
                            <div class="form-group">
                                <label>Tanggal Aksi</label>
                                <input type="text" class="form-control" value="@Model.ChangeDate.ToString()" disabled />
                            </div>
                            <div class="form-group">
                                <label>Nama Tabel</label>
                                <input type="text" class="form-control" asp-for="TableReference" disabled />
                            </div>
                            <div class="form-group">
                                <label>Jenis perubahan</label>
                                <span class="badge badge-pill badge-@Html.Raw(Model.ChangeType == GlobalConst.New ? "primary" : Model.ChangeType == GlobalConst.Update ? "success" : "danger")">@Model.ChangeType</span>
                            </div>
                        </div>
                    </div>
                    <br />
                    <div class="row">
                        <div class="col-sm-12">
                            <div class="tabs-container">
                                <ul class="nav nav-tabs" role="tablist">
                                    @if (Model.ChangeType != GlobalConst.New)
                                    {
                                        <li><a class="nav-link @Html.Raw(Model.ChangeType != GlobalConst.New ? "active" : "")" data-toggle="tab" href="#tab-2">Data Lama</a></li>
                                    }
                                    @if (Model.ChangeType != GlobalConst.Delete)
                                    {
                                        <li><a class="nav-link @Html.Raw(Model.ChangeType == GlobalConst.New ? "active" : "")" data-toggle="tab" href="#tab-3">Data Baru</a></li>
                                    }
                                </ul>
                                <div class="tab-content">
                                    <div role="tabpanel" id="tab-2" class="tab-pane @Html.Raw(Model.ChangeType != GlobalConst.New ? "active" : "")">
                                        <div class="panel-body">
                                            @if (dtOld.Rows.Count > 0)
                                            {
                                                <div class="row">
                                                    <div class="col-sm-12">
                                                        <table id="tblOld" class="table table-striped table-hover dataTables-example">
                                                            <thead>
                                                                <tr>
                                                                    <th>No</th>
                                                                    @foreach (DataColumn col in dtOld.Columns)
                                                                    {
                                                                        <th>@col.ColumnName</th>
                                                                    }
                                                                </tr>
                                                            </thead>
                                                            <tbody>
                                                                @if (dtOld.Rows.Count > 0)
                                                                {
                                                                    for (int r = 0; r < dtOld.Rows.Count; r++)
                                                                    {
                                                                        <tr>
                                                                            @for (int c = 0; c < dtOld.Columns.Count + 1; c++)
                                                                            {
                                                                                if (c == 0)
                                                                                {
                                                                                    <td>@(r + 1)</td>
                                                                                }
                                                                                else
                                                                                {
                                                                                    <td>@dtOld.Rows[r][c - 1]</td>
                                                                                }
                                                                            }
                                                                        </tr>
                                                                    }
                                                                }
                                                            </tbody>
                                                        </table>
                                                    </div>
                                                </div>
                                            }
                                        </div>
                                    </div>
                                    @if(Model.ChangeType != GlobalConst.Delete)
                                    {
                                        <div role="tabpanel" id="tab-3" class="tab-pane @Html.Raw(Model.ChangeType == GlobalConst.New ? "active" : "")">
                                            <div class="panel-body">
                                                @if (dtNew.Rows.Count > 0)
                                                {
                                                    <div class="row">
                                                        <div class="col-sm-12">
                                                            <table id="tblNew" class="table table-striped table-hover dataTables-example">
                                                                <thead>
                                                                    <tr>
                                                                        <th>No</th>
                                                                        @foreach (DataColumn col in dtNew.Columns)
                                                                        {
                                                                            <th>@col.ColumnName</th>
                                                                        }
                                                                    </tr>
                                                                </thead>
                                                                <tbody>
                                                                    @if (dtNew.Rows.Count > 0)
                                                                    {
                                                                        for (int r = 0; r < dtNew.Rows.Count; r++)
                                                                        {
                                                                            <tr>
                                                                                @for (int c = 0; c < dtNew.Columns.Count + 1; c++)
                                                                                {
                                                                                    if (c == 0)
                                                                                    {
                                                                                        <td>@(r + 1)</td>
                                                                                    }
                                                                                    else
                                                                                    {
                                                                                        <td>@dtNew.Rows[r][c - 1]</td>
                                                                                    }
                                                                                }
                                                                            </tr>
                                                                        }
                                                                    }
                                                                </tbody>
                                                            </table>
                                                        </div>
                                                    </div>
                                                }
                                            </div>
                                        </div>
                                    }
                                </div>
                            </div>
                            <br />
                            <a href="@Url.Action(GlobalConst.Index, GlobalConst.LogChanges, new {Area = GlobalConst.Log})" class="btn btn-sm btn-default float-right m-t-n-xs">@Html.Raw(form.BackText)</a>
                        </div>
                    </div>
                    
                </div>
            </div>
        </div>
    </div>
</div>
