@using Ardita.Extensions;
@using Ardita.Models.ViewModels;
@using System.Data;
@using Newtonsoft.Json;
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    Layout = GlobalConst.ViewStart;
    DataTable dt = ViewBag.DtNewHeader == null ? new DataTable() : JsonConvert.DeserializeObject<DataTable>(ViewBag.DtNewHeader.ToString());
}

<div class="row wrapper border-bottom white-bg page-heading">
    <div class="col-lg-10">
        <h2>Archive</h2>
        <ol class="breadcrumb">
            <li class="breadcrumb-item">
                <a href="@Url.Action(GlobalConst.Index, GlobalConst.Home, new { Area = GlobalConst.General })"><i class="fa fa-home"></i></a>
            </li>
            <li class="breadcrumb-item">
                Log
            </li>
            <li class="active breadcrumb-item">
                <strong>Log Perubahan</strong>
            </li>
        </ol>
    </div>
    <div class="col-lg-2">
    </div>
</div>
<div class="wrapper wrapper-content animated fadeInRight">
    <div class="row">
        <div class="col-lg-12">
            <div class="ibox ">
                <div class="ibox-title">
                    <h5>Upload Data</h5>
                    <div class="ibox-tools">
                    </div>
                </div>
                <div class="ibox-content">
                    <form id="frmUpload" method="post" enctype="multipart/form-data" asp-controller="@GlobalConst.Floor" asp-action="@GlobalConst.Upload" asp-area="@GlobalConst.MasterData">
                        <div class="row">
                            <div class="col-sm-4">
                                <div class="input-group">
                                    <div class="custom-file">
                                        <input type="file" id="fUpload" name="files" class="custom-file-input" />
                                        <label class="custom-file-label" for="fUpload">Choose file</label>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <br />
                        <div class="row">
                            <div class="col-sm-12">
                                <a id="btnDownloadTemplate" href="@Url.Action(GlobalConst.DownloadTemplate, GlobalConst.Floor, new { Area = GlobalConst.MasterData })" class="btn btn-sm btn-success"><i class="fa fa-download"></i><span class="bold"> Template</span></a>
                                <button id="btnUpload" class="btn btn-sm btn-primary"><i class="fa fa-upload"></i><span class="bold"> Upload</span></button>
                                <a href="@Url.Action(GlobalConst.Index, GlobalConst.Floor, new { Area = GlobalConst.MasterData })" class="btn btn-sm btn-default"><i class="fa fa-chevron-circle-left"></i><span class="bold"> Back</span></a>
                            </div>
                        </div>
                    </form>
                    <br />
                  
                    @if (dt.Rows.Count > 0)
                    {
                        <div class="row">
                            <div class="col-sm-12">
                                <table id="tblUpload" class="table table-striped table-hover dataTables-example">
                                    <thead>
                                        <tr>
                                            <th>No</th>
                                            @foreach(DataColumn col in dt.Columns)
                                            {
                                                <th>@col.ColumnName</th>

                                            }
                                        </tr>
                                    </thead>
                                    <tbody>
                                      @*  @if (dt.Rows.Count > 0)
                                        {
                                            foreach (DataRow dr in dt.Rows)
                                            {
                                                <tr style="background-color: @Html.Raw(dr[dt.Columns.Count -1] == "" ? "white" : "red");@Html.Raw(dr[dt.Columns.Count -1] == "" ? "" : "color: white")">
