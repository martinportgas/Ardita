                                                                            string[] error = dr[i].ToString()!.Split('_');
                                                                        }
                                                                        @for (int x = 0; x < error.Length; x++)
                                                                        {
                                                                            if (!string.IsNullOrEmpty(@error[x]))
                                                                            {
                                                                                <li>@error[x]</li>
                                                                            }
                                                                        }
                                                                    </ul>
                                                                }
                                                                else
                                                                {
                                                                    @dr[i]
                                                                }
                                                            </td>
                                                        }
                                                        else
                                                        {
                                                            <td>@dr[i]</td>
