@using Ardita.Extensions;
@using Ardita.Models.ViewModels;
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    Layout = GlobalConst.ViewStart;
    FormModel form = Html.Form();
}
<div class="row wrapper border-bottom white-bg page-heading">
    <div class="col-lg-10">
        <h2>Racks</h2>
        <ol class="breadcrumb">
            <li class="breadcrumb-item">
                <a href="@Url.Action(GlobalConst.Index, GlobalConst.Home, new { Area = GlobalConst.General })"><i class="fa fa-home"></i></a>
            </li>
            <li class="breadcrumb-item">
                Log
            </li>
            <li class="active breadcrumb-item">
                <strong>Log Perubahan</strong>
            </li>
        </ol>
    </div>
    <div class="col-lg-2">
    </div>
</div>
<div class="wrapper wrapper-content animated fadeInRight">
    <div class="row">
        <div class="col-lg-12">
            <div class="ibox ">
                <div class="ibox-title">
                    <h5>Log Login</h5>

                </div>
                <div class="ibox-content">
                    <table id="tbl" class="table table-striped table-hover dataTables-example" style="width:100%">
                        <thead>
                            <tr>
                                <th></th>
                                <th>No</th>
                                <th>Username</th>
                                <th>Nama Tabel</th>
                                <th>Tanggal Perubahan</th>
                                <th>Jenis Perubahan</th>
                            </tr>
                        </thead>
                        <tbody></tbody>
                    </table>
                </div>
            </div>
        </div>

    </div>
</div>
@section Scripts {
    <script type="text/javascript">

        $(document).ready(function () {
            bsCustomFileInput.init();
            var table = $('#tbl').DataTable({
                processing: true,
                serverSide: true,
                scrollX: true,
                filter: true,
                ajax: {
                    "url": '@Url.Action(GlobalConst.GetData, GlobalConst.LogChanges, new { Area = GlobalConst.Log})',
                    "type": "POST",
                    "datatype": "json"
                },
                columnDefs: [
                    {
                        width: 50, targets: 0
                    }
                ],
                fixedColumns: true,
                order: [[0, 'desc']],
                columns: [
                    {
                        "data": "logChangeId", "name": "changeDate", "orderable": false, "searchable": false,
                        "render": function (data, type, row, meta) {
                            var detail = `<a class="btn btn-sm btn-warning" href="@Url.Action(GlobalConst.Detail, GlobalConst.LogChanges, new { Area = GlobalConst.Log, Id = -1})"><i class="fa fa-eye"></i> </a>`;
                            detail = detail.replace("-1", row.logChangeId);

                            return detail;
                        }
                    },
                    {
                        "data": "logChangeId", "name": "logChangeId", "orderable": false, "searchable": false, "render": function (data, type, row, meta) {
                            return meta.row + meta.settings._iDisplayStart + 1;
                        }
                    },
                    { "data": "username", "name": "username", "autoWidth": true },
                    { "data": "tableReference", "name": "tableReference", "autoWidth": true },
                    { "data": "changeDate", "name": "changeDate", "autoWidth": true },
                    {
                        "data": "changeType", "name": "changeType", "orderable": false, "searchable": false, "render": function (data, type, row, meta) {
                            return `<span class="badge badge-pill badge-${data == '@GlobalConst.New' ? "primary" : data == '@GlobalConst.Update' ? "success" : "danger"}">${data}</span>`;
                        }
                    },
                ]
            });

        });

    </script>
}