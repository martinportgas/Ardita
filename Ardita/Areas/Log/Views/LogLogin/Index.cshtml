@using Ardita.Extensions;
@using Ardita.Models.ViewModels;
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    Layout = GlobalConst.ViewStart;
    FormModel form = Html.Form();
}
<div class="row wrapper border-bottom white-bg page-heading">
    <div class="col-lg-10">
        <h2>Racks</h2>
        <ol class="breadcrumb">
            <li class="breadcrumb-item">
                <a href="@Url.Action(GlobalConst.Index, GlobalConst.Home, new { Area = GlobalConst.General })"><i class="fa fa-home"></i></a>
            </li>
            <li class="breadcrumb-item">
               Log
            </li>
            <li class="active breadcrumb-item">
                <strong>Log Login</strong>
            </li>
        </ol>
    </div>
    <div class="col-lg-2">
    </div>
</div>
<div class="wrapper wrapper-content animated fadeInRight">
    <div class="row">
        <div class="col-lg-12">
            <div class="ibox ">
                <div class="ibox-title">
                    <h5>Log Login</h5>
                   
                </div>
                <div class="ibox-content">
                    <table id="tbl" class="table table-striped table-hover dataTables-example" style="width:100%">
                        <thead>
                            <tr>
                                <th>No</th>
                                <th>Username</th>
                                <th>Tanggal Login</th>
                                <th>Nama Komputer</th>
                                <th>Alamat IP</th>
                                <th>Alamat MAC</th>
                                <th>Sistem Operasi</th>
                                <th>Browser</th>
                            </tr>
                        </thead>
                        <tbody></tbody>
                    </table>
                </div>
            </div>
        </div>

    </div>
</div>
@section Scripts {
    <script type="text/javascript">

        $(document).ready(function () {
            bsCustomFileInput.init();
            var table = $('#tbl').DataTable({
                processing: true,
                serverSide: true,
                scrollX: true,
                filter: true,
                ajax: {
                    "url": '@Url.Action(GlobalConst.GetData, GlobalConst.LogLogin, new { Area = GlobalConst.Log})',
                    "type": "POST",
                    "datatype": "json"
                },
                columnDefs: [
                    {
                        width: 50, targets: 0
                    }
                ],
                fixedColumns: true,
                columns: [
                    {
                        "data": "logLoginId", "name": "logLoginId", "orderable": false, "searchable": false, "render": function (data, type, row, meta) {
                            return meta.row + meta.settings._iDisplayStart + 1;
                        }
                    },
                    { "data": "username", "name": "username", "autoWidth": true },
                    { "data": "loginDate", "name": "loginDate", "autoWidth": true },
                    { "data": "computerName", "name": "computerName", "autoWidth": true },
                    { "data": "ipAddress", "name": "ipAddress", "autoWidth": true },
                    { "data": "macAddress", "name": "macAddress", "autoWidth": true },
                    { "data": "osName", "name": "osName", "autoWidth": true },
                    { "data": "browserName", "name": "browserName", "autoWidth": true }
                ]
            });

        });

    </script>
}