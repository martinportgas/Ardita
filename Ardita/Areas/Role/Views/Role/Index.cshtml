@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="row wrapper border-bottom white-bg page-heading">
    <div class="col-lg-10">
        <h2>Role</h2>
        <ol class="breadcrumb">
            <li class="breadcrumb-item">
                <a href="@Url.Action("Index", "Role")">Roles</a>
            </li>
            <li class="active breadcrumb-item">
                <strong>Data</strong>
            </li>
        </ol>
    </div>
    <div class="col-lg-2">
    </div>
</div>
<div class="wrapper wrapper-content animated fadeInRight">
    <div class="row">
        <div class="col-lg-12">
            <div class="ibox ">
                <div class="ibox-title">
                    <h5>Roles</h5>
                    <div class="ibox-tools">
                        <a href="@Url.Action("Add", "Role", new { Area = "Role"})" class="btn btn-sm btn-primary"><i class="fa fa-pencil"></i><span class="bold"> New</span></a>
                    </div>
                </div>
                <div class="ibox-content">
                    <table id="tblRole" class="table table-striped table-bordered table-hover dataTables-example">
                        <thead>
                            <tr>
                                <th>Role Code</th>
                                <th>Role Name</th>
                                <th>Is Active</th>
                                <th></th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody></tbody>
                    </table>
                </div>
            </div>
        </div>

    </div>
</div>
@section Scripts {
    <script type="text/javascript">

        $(document).ready(function () {
            bsCustomFileInput.init();
            var table = $('#tblRole').DataTable({
                processing: true,
                serverSide: true,
                filter: true,
                ajax: {
                    "url": '@Url.Action("GetData", "Role", new { Area = "Role"})',
                    "type": "POST",
                    "datatype": "json"
                },
                columns: [
                    { "data": "roleCode", "name": "Role Code", "autoWidth": true },
                    { "data": "roleName", "name": "Role Name", "autoWidth": true },
                    { "data": "isActive", "name": "Is Actice", "autoWidth": true },

                    {
                        "data": "roleId",
                        "render": function (data, type, row, meta) {

                            var edit = `<a class="btn btn-sm btn-default" href="@Url.Action("Update", "Position", new { Area = "Position", Id = -1 })">Edit</a>`;
                            edit = edit.replace("-1", row.userId);
                            return edit;
                        }
                    },
                    {
                        "data": "roleId",
                        "render": function (data, type, row, meta) {
                            var remove = `<a class="btn btn-sm btn-danger" href="@Url.Action("Remove", "Position", new { Area = "Position", Id = -1 })">Remove</a>`;
                            remove = remove.replace("-1", row.userId);
                            return remove;
                        }
                    }
                ],
                buttons: [
                    { extend: 'excel', title: 'user-data' },
                ]
            });


        });
    </script>
}