@using Ardita.Models.ViewModels;
@using Ardita.Extensions;
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="row wrapper border-bottom white-bg page-heading">
    <div class="col-lg-10">
        <h2>Users Role</h2>
        <ol class="breadcrumb">
            <li class="breadcrumb-item">
                <a href="@Url.Action(GlobalConst.Index, GlobalConst.Home, new { Area = GlobalConst.General })"><i class="fa fa-home"></i></a>
            </li>
            <li class="breadcrumb-item">
                User Management
            </li>
            <li class="active breadcrumb-item">
                <strong>User Role</strong>
            </li>
        </ol>
    </div>
    <div class="col-lg-2">
    </div>
</div>
<div class="wrapper wrapper-content animated fadeInRight">
    <div class="row">
        <div class="col-lg-12">
            <div class="ibox ">
                <div class="ibox-title">
                    <h5>User Role</h5>
                    <div class="ibox-tools">
                    </div>
                </div>
                <div class="ibox-content">
                    <table id="tblUser" class="table table-striped table-hover dataTables-example" style="width: 100%">
                        <thead>
                            <tr>
                                <th>No</th>
                                <th>Action</th>
                                <th>Username</th>
                                <th>Name</th>
                                <th>Position</th>
                            </tr>
                        </thead>
                        <tbody></tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
@section Scripts {
    <script type="text/javascript">
        $(document).ready(function () {
            bsCustomFileInput.init();
            var table = $('#tblUser').DataTable({
                processing: true,
                serverSide: true,
                order:[[0, "desc"]],
                scrollX: true,
                filter: true,
                ajax: {
                    "url": '@Url.Action(GlobalConst.GetData, GlobalConst.UserRole, new { Area = GlobalConst.UserManage})',
                    "type": "POST",
                    "datatype": "json",
                    "complete":function(a, b, c){
                        console.log(a);
                        console.log(b);
                        console.log(c);
                    }
                },
                columnDefs: [
                    {
                        width: 30, targets: 0
                    }
                ],
                columns: [
                    {
                        "data": "userId", 
                        "name": "createdDate",
                        "orderable": false, "searchable": false, "render": function (data, type, row, meta) {
                            return meta.row + meta.settings._iDisplayStart + 1;
                        }
                    },
                    {
                        "data": "userId",
                        "render": function (data, type, row, meta) {
                            var view = `<a class="btn btn-sm btn-danger" href="@Url.Action(GlobalConst.Detail, GlobalConst.UserRole, new { Area = GlobalConst.UserManage, Id = -1 })"><i class="fa fa-eye"></i></a>`;
                            view = view.replace("-1", row.userId);
                            return view;
                        }
                    },
                    { "data": "username", "name": "username", "autoWidth": true },
                    { "data": "employeeName", "name": "employee.name", "autoWidth": true },
                    { "data": "positionName", "name": "employee.position.name", "autoWidth": true },
                    
                ]
            });
        });
    </script>
}