@model Ardita.Models.DbModels.MstUser
@using Ardita.Extensions;
@using Ardita.Models.ViewModels;

@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    FormModel form = Html.Form();
}
<div class="row wrapper border-bottom white-bg page-heading">
    <div class="col-lg-10">
        <h2>Role</h2>
        <ol class="breadcrumb">
            <li class="breadcrumb-item">
                <a href="@Url.Action("Index", "UserRole")">Detail User Roles</a>
            </li>
            <li class="active breadcrumb-item">
                <strong>Data</strong>
            </li>
        </ol>
    </div>
    <div class="col-lg-2">
    </div>
</div>
<div class="wrapper wrapper-content animated fadeInRight">
    <div class="row">
        <div class="col-lg-12">
            <div class="ibox ">
                <div class="ibox-title">
                    <h5>User Role</h5>
                </div>
                <div class="ibox-content">
                    <div class="row">
                        <div class="col-sm-6 b-r">
                            <form role="form" id="frmRole" enctype="multipart/form-data" asp-controller="UserRole" asp-area="UserManage" asp-action="Save">
                                <div class="form-group">
                                    <label>Username</label>
                                    <input type="hidden" asp-for="UserId" name="UserId" />
                                    <input type="text" asp-for="Username" placeholder="" class="form-control" readonly="">
                                </div>
                                <div class="form-group">
                                    <label>Role</label>
                                    <select name="RoleId" id="txtRoleId" asp-items="ViewBag.listRoles" class="select2_demo_1 form-control" data-placeholder=" -- Pilih Role -- " required><option value=""></option></></select>
                                </div>
                                <div class="form-group">
                                    <label>Lokasi Kearsipan</label>
                                    <select name="ArchiveUnitId" id="txtArchiveUnitId" asp-items="ViewBag.listArchiveUnit" class="select2_demo_1 form-control" data-placeholder=" -- Semua -- "><option value=""></option></select>
                                </div>
                                <div class="form-group">
                                    <label>Unit Pencipta</label>
                                    <select name="CreatorId" id="txtCreatorId" asp-items="ViewBag.listCreator" class="select2_demo_1 form-control" data-placeholder=" -- Semua -- "><option value=""></option></select>
                                </div>
                                <div class="form-group">
                                    <label>Role Utama ?</label>
                                    <div>
                                        <input class="m-l-sm" type="checkbox" name="IsPrimary" value="@GlobalConst.Yes" />
                                    </div>
                                </div>
                                <div class="form-group">
                                    <a href="@Url.Action("Index", "UserRole", new { Area = "UserManage" })" class="btn btn-sm btn-danger float-right m-t-n-xs">@Html.Raw(form.BackText)</a>
                                    <button class="btn btn-sm btn-primary float-right m-t-n-xs mr-1" type="submit"><i class="fa fa-pencil">Add</i></button>
                                </div>
                            </form>
                        </div>
                        <div class="col-sm-6 b-r">
                            <table id="tblRole" class="table table-striped table-hover dataTables-example" style="width: 100%">
                                <thead>
                                    <tr>
                                        <th></th>
                                        <th>Kode Role</th>
                                        <th>Nama Role</th>
                                        <th>Lokasi Kearsipan</th>
                                        <th>Unit Pencipta</th>
                                        <th style="text-align:center">Role Utama</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @if (ViewBag.listUserRole.Count > 0)
                                    {
                                        foreach (Ardita.Models.DbModels.IdxUserRole item in ViewBag.listUserRole)
                                        {
                                            <tr>
                                                <td><a class="btn btn-danger btn-sm" href="@Url.Action("Remove", "UserRole", new { Area="UserManage", id = item.UserRoleId})"><i class="fa fa-trash"></i></a></td>
                                                <td>@item.Role.Code</td>
                                                <td>@item.Role.Name</td>
                                                <td>
                                                    @if(item.ArchiveUnit != null)
                                                    {
                                                        <span>@item.ArchiveUnit.ArchiveUnitName</span>
                                                    }
                                                    else
                                                    {
                                                        <span>Semua</span>
                                                    }
                                                </td>
                                                <td>
                                                    @if (item.Creator != null)
                                                    {
                                                        <span>@item.Creator.CreatorName</span>
                                                    }
                                                    else
                                                    {
                                                        <span>Semua</span>
                                                    }
                                                </td>
                                                <td align="center"><input type="checkbox" style="pointer-events:none" @Html.Raw(item.IsPrimary ? "checked" : "") /> </td>
                                            </tr>
                                        }
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>

    </div>
</div>
