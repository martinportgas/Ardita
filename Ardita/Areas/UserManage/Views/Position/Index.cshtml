@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="row wrapper border-bottom white-bg page-heading">
    <div class="col-lg-10">
        <h2>Positions</h2>
        <ol class="breadcrumb">
            <li class="breadcrumb-item">
                <a href="@Url.Action("Index", "Home")"><i class="fa fa-home"></i></a>
            </li>
            <li class="breadcrumb-item">
                User Management
            </li>
            <li class="active breadcrumb-item">
                <strong>Position</strong>
            </li>
        </ol>
    </div>
    <div class="col-lg-2">
    </div>
</div>
<div class="wrapper wrapper-content animated fadeInRight">
    <div class="row">
        <div class="col-lg-12">
            <div class="ibox ">
                <div class="ibox-title">
                    <h5>Positions</h5>
                    <div class="ibox-tools">
                        <a href="@Url.Action("Add", "Position", new { Area = "UserManage"})" class="btn btn-sm btn-primary"><i class="fa fa-pencil"></i><span class="bold"> New</span></a>
                     </div>
                </div>
                <div class="ibox-content">
                    <table id="tblPosition" class="table table-striped table-hover dataTables-example" style="width:100%">
                        <thead>
                            <tr>
                                <th>No</th>
                                <th>Action</th>
                                <th>Position Code</th>
                                <th>Position Name</th>
                            </tr>
                        </thead>
                        <tbody></tbody>
                    </table>
                </div>
            </div>
        </div>
      
    </div>
</div>
@section Scripts {
    <script type="text/javascript">

        $(document).ready(function () {
            bsCustomFileInput.init();
            var table = $('#tblPosition').DataTable({
                processing: true,
                serverSide: true,
                scrollX: true,
                filter: true,
                ajax: {
                    "url": '@Url.Action("GetData", "Position", new { Area = "UserManage"})',
                    "type": "POST",
                    "datatype": "json"
                },
                columnDefs: [
                    { 
                        width: 50, targets: 0 
                    }
                ],
                fixedColumns: true,
                columns: [
                    {
                        "data": "positionId", "orderable": false, "searchable": false, "render": function (data, type, row, meta) {
                            return meta.row + meta.settings._iDisplayStart + 1;
                        }
                    },
                    {
                        "data": "positionId",
                        "render": function (data, type, row, meta) {
                            var edit = `<a class="btn btn-sm btn-default" href="@Url.Action("Update", "Position", new { Area = "UserManage", Id = -1 })"><i class="fa fa-pencil"></i> </a>`;
                            edit = edit.replace("-1", row.positionId);

                            var remove = `<a class="btn btn-sm btn-danger" href="@Url.Action("Remove", "Position", new { Area = "UserManage", Id = -1 })"><i class="fa fa-trash"></i> </a>`;
                            remove = remove.replace("-1", row.positionId);

                            var JoinButton = edit.concat(" ", remove);
                            return JoinButton;
                        }
                    },
                    { "data": "positionCode", "name": "positionCode", "autoWidth": true },
                    { "data": "positionName", "name": "positionName", "autoWidth": true },
                    //{ 
                    //    "data": "isActive",
                    //    "render": function (data, type, row, meta) {
                    //        var isActive = `<label><input type="checkbox" ${row.isActive == true ? "checked" : ""} class="i-checks" disabled=""></label>`;

                    //        return isActive;
                    //    }
                    //}
                ],
                buttons: [
                    { extend: 'excel', title: 'user-data' },
                ]
            });
        });
    </script>
}