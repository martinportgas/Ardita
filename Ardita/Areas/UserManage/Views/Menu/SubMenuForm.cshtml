@model Ardita.Models.DbModels.MstSubmenu
@using Ardita.Models.ViewModels;
@using Ardita.Extensions;

@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    Layout = GlobalConst.ViewStart;

    FormModel form = Html.Form();
}


<div class="row wrapper border-bottom white-bg page-heading">
    <div class="col-lg-10">
        <h2>Data</h2>
        <ol class="breadcrumb">
            <li class="breadcrumb-item">
                <a href="@Url.Action(GlobalConst.Index, GlobalConst.Home, new {Area = GlobalConst.UserManage })">Menu</a>
            </li>
            <li class="active breadcrumb-item">
                <strong>Data</strong>
            </li>
        </ol>
    </div>
    <div class="col-lg-2">
    </div>
</div>
<div class="wrapper wrapper-content animated fadeInRight">
    <div class="row">
        <div class="col-lg-12">
            <div class="ibox ">
                <div class="ibox-title">
                    <h5>Menu</h5>
                    <div class="ibox-tools">
                        <a class="collapse-link">
                            <i class="fa fa-chevron-up"></i>
                        </a>
                        <a class="dropdown-toggle" data-toggle="dropdown" href="form_basic.html#">
                            <i class="fa fa-wrench"></i>
                        </a>
                        <ul class="dropdown-menu dropdown-user">
                            <li>
                                <a href="form_basic.html#" class="dropdown-item">Config option 1</a>
                            </li>
                            <li>
                                <a href="form_basic.html#" class="dropdown-item">Config option 2</a>
                            </li>
                        </ul>
                        <a class="close-link">
                            <i class="fa fa-times"></i>
                        </a>
                    </div>
                </div>
                <div class="ibox-content">
                    <div class="row">
                        <div class="col-sm-6 b-r">
                            <form id="frmMenu" role="form" enctype="multipart/form-data" asp-controller="@GlobalConst.Menu" asp-area="@form.CurrentArea" asp-action="@GlobalConst.SaveSubMenu">
                                <div class="form-group">
                                    <div class="form-group">
                                        <label>Sub Menu Name</label>
                                        <input type="hidden" asp-for="SubmenuId">

                                        <input type="text" placeholder="" id="txtMenuName" class="form-control" asp-for="Name">
                                    </div>
                                    <div class="form-group">
                                        <label>Sort</label>
                                        <input type="number" placeholder="" id="txtMenuSort" class="form-control" asp-for="Sort">
                                    </div>
                                    <div class="form-group">
                                        <label>Menu Path</label>
                                        <input type="text" placeholder="" id="txtMenuPath" class="form-control" asp-for="Path" readonly="">
                                    </div>
                                </div>
                                <div>
                                    <a href="@Url.Action(GlobalConst.Index, GlobalConst.Menu, new { Area = GlobalConst.UserManage })" class="btn btn-sm btn-danger float-right m-t-n-xs">@Html.Raw(form.BackText)</a>
                                    <button class="btn btn-sm btn-primary float-right m-t-n-xs mr-1" type="submit" onclick="onSubmit(this, event);">@Html.Raw(form.SaveText)</button>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

</div>
@section Scripts {
    <script type="text/javascript">
        function onSubmit(ctl, event) {
            event.preventDefault();
            swal({
                title: "Do you want to save it?",
                text: "Please check Information before Submiting!",
                type: "warning",
                showCancelButton: true,
                confirmButtonColor: "#DD6B55",
                confirmButtonText: "Save",
                cancelButtonText: "Cancel",
                closeOnConfirm: false,
                closeOnCancel: false
            },
                function (isConfirm) {
                    if (isConfirm) {
                        $("#frmMenu").submit();
                    } else {
                        swal("Cancelled", "You have Cancelled Form Submission!", "error");
                    }
                });
        }
    </script>
}