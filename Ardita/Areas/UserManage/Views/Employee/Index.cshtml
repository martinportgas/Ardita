@model Ardita.Models.DbModels.MstEmployee
@using Ardita.Models.ViewModels;
@using Ardita.Extensions;

@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    Layout = GlobalConst.ViewStart;
}

<div class="row wrapper border-bottom white-bg page-heading">
    <div class="col-lg-10">
        <h2>Employees</h2>
        <ol class="breadcrumb">
            <li class="breadcrumb-item">
                <a href="@Url.Action(GlobalConst.Index, GlobalConst.Home, new { Area = GlobalConst.General })"><i class="fa fa-home"></i></a>
            </li>
            <li class="breadcrumb-item">
                User Management
            </li>
            <li class="active breadcrumb-item">
                <strong>Employee</strong>
            </li>
        </ol>
    </div>
    <div class="col-lg-2">
    </div>
</div>
<div class="wrapper wrapper-content animated fadeInRight">
    <div class="row">
        <div class="col-lg-12">
            <div class="ibox ">
                <div class="ibox-title">
                    <h5>Employees</h5>
                    <div class="ibox-tools">
                        <a href="@Url.Action(GlobalConst.Add, GlobalConst.Employee, new { Area = GlobalConst.UserManage})" class="btn btn-sm btn-primary"><i class="fa fa-pencil"></i><span class="bold"> New</span></a>
                        <a href="@Url.Action(GlobalConst.Export, GlobalConst.Employee, new { Area = GlobalConst.UserManage})" class="btn btn-sm btn-primary"><i class="fa fa-download"></i><span class="bold"> Export</span></a>
                        <a href="@Url.Action(GlobalConst.UploadForm, GlobalConst.Employee, new { Area = GlobalConst.UserManage})" class="btn btn-sm btn-danger"><i class="fa fa-upload"></i><span class="bold"> Upload</span></a>
                        
                    </div>
                </div>
                <div class="ibox-content">
                    <table id="tblEmployee" class="table table-striped table-hover dataTables-example" style="width:100%">
                        <thead>
                            <tr>
                                <th>No</th>
                                <th>Action</th>
                                <th>NIK</th>
                                <th>Name</th>
                                <th>Email</th>
                                <th>Gender</th>
                                <th>Place of Birth</th>
                                <th>Date of Birth</th>
                                <th>Address</th>
                                <th>Phone</th>
                                <th>Level</th>
                                <th>Position</th>
                                
                            </tr>
                        </thead>
                        <tbody></tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
@section Scripts {
    <script type="text/javascript">

        $(document).ready(function () {
            bsCustomFileInput.init();
            var table = $('#tblEmployee').DataTable({
                processing: true,
                serverSide: true,
                scrollY: true,
                filter: true,
                order: [[0, "desc"]],
                ajax: {
                    "url": '@Url.Action(GlobalConst.GetData, GlobalConst.Employee, new { Area = GlobalConst.UserManage})',
                    "type": "POST",
                    "datatype": "json"
                }, 
                columnDefs: [
                    {
                        width: 10, targets: 0
                    },
                    {
                        width: 100, targets: 1
                    }
                ],
                fixedColumns: true,
                columns: [
                    {
                        "data": "employeeId",
                        "name": "createdDate",
                        "orderable": false, 
                        "searchable": false, 
                        "render": function (data, type, row, meta) {
                            return meta.row + meta.settings._iDisplayStart + 1;
                        }
                    },
                    {
                        "orderable": false, 
                        "searchable": false,
                        "data": "employeeId",
                        "render": function (data, type, row, meta) {

                            var detail = `<a class="btn btn-sm btn-warning" href="@Url.Action(GlobalConst.Detail, GlobalConst.Employee, new { Area = GlobalConst.UserManage, Id = -1 })"><i class="fa fa-eye"></i> </a>`;
                            detail = detail.replace("-1", data);

                            var edit = `<a class="btn btn-sm btn-primary" href="@Url.Action(GlobalConst.Update, GlobalConst.Employee, new { Area = GlobalConst.UserManage, Id = -1 })"><i class="fa fa-pencil"></i> </a>`;
                            edit = edit.replace("-1", row.employeeId);

                            var remove = `<a class="btn btn-sm btn-danger" href="@Url.Action(GlobalConst.Remove, GlobalConst.Employee, new { Area = GlobalConst.UserManage, Id = -1 })"><i class="fa fa-trash"></i> </a>`;
                            remove = remove.replace("-1", row.employeeId);

                            var JoinButton = edit.concat(" ", detail).concat(" ", remove);
                            var div = `<div style="width:100px">${JoinButton}</div>`
                            return div;
                        }
                    },
                    { "data": "nik", "name": "nik", "autoWidth": true },
                    { "data": "name", "name": "name", "autoWidth": true },
                    { "data": "email", "name": "email", "autoWidth": true },
                    { "data": "gender", "name": "gender", "autoWidth": true },
                    { "data": "placeOfBirth", "name": "placeOfBirth", "autoWidth": true },
                    { "data": "dateOfBirth", "name": "dateOfBirth", "autoWidth": true },
                    { "data": "address", "name": "address", "autoWidth": true },
                    { "data": "phone", "name": "phone", "autoWidth": true },
                    { "data": "employeeLevel", "name": "employeeLevel", "autoWidth": true },
                    { "data": "positionName", "name": "position.name", "autoWidth": true }
                ]
            });

            $('#btnUpload').on('click', function () {
                var fileExtension = ['xls', 'xlsx'];
                var filename = $('#fUpload').val();
                if (filename.length == 0) {
                    alert("Please select a file.");
                    return false;
                }
                else {
                    var extension = filename.replace(/^.*\./, '');
                    if ($.inArray(extension, fileExtension) == -1) {
                        alert("Please select only excel files.");
                        return false;
                    }
                }
                $("#frmEmployeeUpload").submit();
            });


        });
    </script>
}