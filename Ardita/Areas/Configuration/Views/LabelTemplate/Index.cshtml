@using Ardita.Extensions;
@using Ardita.Models.ViewModels;
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    Layout = GlobalConst.ViewStart;
    FormModel form = Html.Form();
}
<div class="row wrapper border-bottom white-bg page-heading">
    <div class="col-lg-10">
        <h2>Template Berita Acara</h2>
        <ol class="breadcrumb">
            <li class="breadcrumb-item">
                <a href="@Url.Action(GlobalConst.Index, GlobalConst.Home, new { Area = GlobalConst.General })"><i class="fa fa-home"></i></a>
            </li>
            <li class="breadcrumb-item">
                Pengaturan
            </li>
            <li class="active breadcrumb-item">
                <strong>Template Berita Acara</strong>
            </li>
        </ol>
    </div>
    <div class="col-lg-2">
    </div>
</div>
<div class="wrapper wrapper-content animated fadeInRight">
    <div class="row">
        <div class="col-lg-12">
            <div class="ibox ">
                <div class="ibox-title">
                    <h5>Log Login</h5>

                </div>
                <div class="ibox-content">
                    <table id="tbl" class="table table-striped table-hover dataTables-example" style="width:100%">
                        <thead>
                            <tr>
                                <th>No</th>
                                <th>Aksi</th>
                                <th>Jenis Template</th>
                                <th>Nama Template</th>
                            </tr>
                        </thead>
                        <tbody></tbody>
                    </table>
                </div>
            </div>
        </div>

    </div>
</div>
@section Scripts {
    <script type="text/javascript">

        $(document).ready(function () {
            bsCustomFileInput.init();
            var table = $('#tbl').DataTable({
                processing: true,
                serverSide: true,
                scrollX: true,
                filter: true,
                ajax: {
                    "url": '@Url.Action(GlobalConst.GetData, GlobalConst.LabelTemplate, new { Area = GlobalConst.Configuration})',
                    "type": "POST",
                    "datatype": "json"
                },
                columnDefs: [
                    {
                        width: 50, targets: 0
                    }
                ],
                fixedColumns: true,
                order: [[0, 'desc']],
                columns: [
                    {
                        "data": "templateSettingId", "name": "updatedDate", "orderable": false, "searchable": false, "render": function (data, type, row, meta) {
                            return meta.row + meta.settings._iDisplayStart + 1;
                        }
                    },
                    {
                        "data": "templateSettingId", "name": "templateSettingId", "orderable": false, "searchable": false,
                        "render": function (data, type, row, meta) {
                            var edit = `<a class="btn btn-sm btn-primary" href="@Url.Action(GlobalConst.Update, GlobalConst.LabelTemplate, new { Area = GlobalConst.Configuration, Id = -1})"><i class="fa fa-pencil"></i> </a>`;
                            edit = edit.replace("-1", data);

                            var detail = `<a class="btn btn-sm btn-warning" href="@Url.Action(GlobalConst.Detail, GlobalConst.LabelTemplate, new { Area = GlobalConst.Configuration, Id = -1})"><i class="fa fa-eye"></i> </a>`;
                            detail = detail.replace("-1", data);

                            return edit.concat(' ', detail);
                        }
                    },
                    { "data": "templateType", "name": "templateType", "autoWidth": true },
                    { "data": "templateName", "name": "templateName", "autoWidth": true },
                ]
            });

        });

    </script>
}