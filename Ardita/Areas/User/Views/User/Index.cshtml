@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="row wrapper border-bottom white-bg page-heading">
    <div class="col-lg-10">
        <h2>Users</h2>
        <ol class="breadcrumb">
            <li class="breadcrumb-item">
                <a href="@Url.Action("Index", "User")">Users</a>
            </li>
            <li class="active breadcrumb-item">
                <strong>Data</strong>
            </li>
        </ol>
    </div>
    <div class="col-lg-2">
    </div>
</div>
<div class="wrapper wrapper-content animated fadeInRight">
    <div class="row">
        <div class="col-lg-12">
            <div class="ibox ">
                <div class="ibox-title">
                    <h5>Users</h5>
                    <div class="ibox-tools">
                        <a href="@Url.Action("Add", "User", new { Area = "User"})" class="btn btn-sm btn-primary"><i class="fa fa-pencil"></i><span class="bold"> New</span></a>
                        <button id="btnShowUpload" class="btn btn-sm btn-success" data-toggle="modal" data-target="#formUpload"><i class="fa fa-upload"></i><span class="bold"> Upload</span></button>
                    </div>
                </div>
                <div class="ibox-content">

                    <table id="tblUser" class="table table-striped table-bordered table-hover dataTables-example">
                        <thead>
                            <tr>
                                <th></th>
                                <th>Username</th>
                                <th>Name</th>
                                <th>Position</th>
                                <th></th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody></tbody>
                    </table>
                </div>
            </div>
        </div>
        <!--Modal-->
        <div class="modal inmodal" id="formUpload" tabindex="-1" role="dialog" aria-hidden="true">
            <div class="modal-dialog">
                <div class="modal-content animated fadeIn">
                    <div class="modal-header">
                        <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
                        <h4 class="modal-title">User Upload</h4>
                        <small>Pastikan format file anda sudah benar.</small>
                    </div>
                    <div class="modal-body">
                        <form>
                            <div class="row">
                                <div class="input-group">
                                    <div class="custom-file">
                                        <input type="file" id="fUpload" name="files" class="custom-file-input" />
                                        <label class="custom-file-label" for="inputGroupFile01">Choose file</label>
                                    </div>
                                </div>
                            </div>
                            <br />
                        </form>
                    </div>
                    <div class="modal-footer">
                        <button id="btnUpload" class="btn btn-sm btn-default"><i class="fa fa-upload"></i><span class="bold"> Upload</span></button>
                        <button type="button" class="btn btn-white" data-dismiss="modal">Close</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
@section Scripts {
    <script type="text/javascript">
        $(document).ready(function () {
            bsCustomFileInput.init();
            var table = $('#tblUser').DataTable({
                pageLength: 25,
                searching: false,
                lengthChange: false,
                dom: '<"html5buttons"B>lTfgitp',
                ajax: {
                    "url": '@Url.Action("GetData", "User", new { Area = "User"})',
                    "type": "GET",
                    "datatype": "json"
                },
                columns: [
                    { "data": "userId", "name": "User ID", "autoWidth": true },
                    { "data": "userName", "name": "Username", "autoWidth": true },
                    { "data": "employeeName", "name": "Name", "autoWidth": true },
                    { "data": "employeePosition", "name": "Position", "autoWidth": true },
                    {
                        "data": "UserId",
                        "render": function (data, type, row, meta) {

                            var edit = `<a class="btn btn-sm btn-default" href="@Url.Action("Update", "User", new { Area = "User", Id = -1 })">Edit</a>`;
                            edit = edit.replace("-1", row.userId);
                            return edit;
                        }
                    },
                    {
                        "data": "UserId",
                        "render": function (data, type, row, meta) {
                            var remove = `<a class="btn btn-sm btn-danger" href="@Url.Action("Remove", "User", new { Area = "User", Id = -1 })">Remove</a>`;
                            remove = remove.replace("-1", row.userId);
                            return remove;
                        }
                    }
                ],
                buttons: [
                    { extend: 'excel', title: 'user-data' },
                ]
            });
            table.on('order.dt search.dt', function () {
                let i = 1;
                table.cells(null, 0, { search: 'applied', order: 'applied' }).every(function (cell) {
                    this.data(i++);
                });
            }).draw();
            $('#btnUpload').on('click', function () {
                var fileExtension = ['xls', 'xlsx'];
                var filename = $('#fUpload').val();
                if (filename.length == 0) {
                    alert("Please select a file.");
                    return false;
                }
                else {
                    var extension = filename.replace(/^.*\./, '');
                    if ($.inArray(extension, fileExtension) == -1) {
                        alert("Please select only excel files.");
                        return false;
                    }
                }
                var fdata = new FormData();
                var fileUpload = $("#fUpload").get(0);
                var files = fileUpload.files;
                fdata.append(files[0].name, files[0]);
                $.ajax({
                    type: "POST",
                    url: '@Url.Action("Upload", "User", new { Area = "User" })',
                    beforeSend: function (xhr) {
                        xhr.setRequestHeader("XSRF-TOKEN",
                            $('input:hidden[name="__RequestVerificationToken"]').val());
                    },
                    data: fdata,
                    contentType: false,
                    processData: false,
                    success: function (response) {
                        window.location.reload();
                    },
                    error: function (e) {
                        alert(e.responseText);
                    }
                });
            })
        });
    </script>
}