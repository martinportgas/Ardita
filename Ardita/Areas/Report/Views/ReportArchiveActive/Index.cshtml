@using Ardita.Extensions;
@using Ardita.Models.ViewModels;
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    Layout = GlobalConst.ViewStart;
    FormModel form = Html.Form();
}

<div class="row wrapper border-bottom white-bg page-heading">
    <div class="col-lg-10">
        <h2>Companies</h2>
        <ol class="breadcrumb">
            <li class="breadcrumb-item">
                <a href="@Url.Action(GlobalConst.Index, GlobalConst.Home, new { Area = GlobalConst.General })"><i class="fa fa-home"></i></a>
            </li>
            <li class="breadcrumb-item">Master Data</li>
            <li class="active breadcrumb-item"><strong>Report</strong></li>
        </ol>
    </div>
</div>

<div class="wrapper wrapper-content animated fadeInRight">
    <div class="row">
        <div class="col-lg-12">
            <div class="ibox ">
                <div class="ibox-title">
                    <h5>Report</h5>
                    <div class="ibox-tools">
                        <a target="_blank" href="@Url.Action(GlobalConst.GenerateReport, @form.CurrentController, new { Area = @form.CurrentArea})" class="btn btn-sm btn-primary"><i class="fa fa-download"></i><span class="bold"> Generate Report</span></a>

                    </div>
                </div>
                <div class="ibox-content">
                    <div class="row">
                        <div class="col-sm-6 b-r">
                            <div class="form-group row" style="display:none">
                                <label class="col-lg-3 col-form-label">Periode Arsip</label>
                                <div class="col-lg-4">
                                    <input type="date" id="txtStartDate" class="form-control" />
                                </div>
                                <div class="col-lg-1" style="text-align: center;padding: 6px;">
                                    <strong>s/d</strong>
                                </div>
                                <div class="col-lg-4">
                                    <input type="date" id="txtEndDate" class="form-control" />
                                </div>
                            </div>
                            <div class="form-group row">
                                <label class="col-lg-3 col-form-label">Pencipta Arsip</label>
                                <div class="col-lg-9">
                                    <select id="txtCreatorId" class="form-control" asp-items="ViewBag.ListArchiveCreator" data-placeholder="-- Semua --"><option value=""></option></select>
                                </div>
                            </div>
                            <div class="form-group row">
                                <label class="col-lg-3 col-form-label">Tahun</label>
                                <div class="col-lg-9">
                                    <select id="txtYear" class="form-control"
                                            data-placeholder="-- Semua --">
                                        <option value=""></option>
                                        @for (int i = 0; i > -20; i--)
                                        {
                                            <option value="@DateTime.Now.AddYears(i).ToString("yyyy")">@DateTime.Now.AddYears(i).ToString("yyyy")</option>
                                        }
                                    </select>
                                </div>
                            </div>
                            <div class="form-group row">
                                <label class="col-lg-3 col-form-label">Lokasi Simpan</label>
                                <div class="col-lg-9">
                                    <select asp-items="ViewBag.listRow"
                                            id="txtRowId" class="form-control"
                                            data-placeholder="-- Semua --">
                                        <option value=""></option>
                                    </select>
                                </div>
                            </div>
                            <div class="form-group row">
                                <label class="col-lg-3 col-form-label">Status</label>
                                <div class="col-lg-9">
                                    <input style="vertical-align:middle" type="radio" value="" id="all" checked name="status" />
                                    <label for="all">Semua </label>
                                    <input style="vertical-align:middle;margin-left:5px;" type="radio" value="@GlobalConst.Available" id="available" name="status" />
                                    <label for="available">@GlobalConst.Available </label>
                                    <input style="vertical-align:middle;margin-left:5px;" type="radio" value="@GlobalConst.Used" id="use" name="status" />
                                    <label for="use">@GlobalConst.Used</label>
                                </div>
                            </div>
                            <div class="form-group">
                                <button class="btn btn-sm btn-primary float-right m-t-n-xs" id="btnSearch"><i class="fa fa-filter"></i> Generate Report</button>
                            </div>
                        </div>
                        <div class="col-sm-6">
                            <div class="form-group">
                                <button class="btn btn-sm btn-warning float-right m-t-n-xs" id="btnSearch" style="margin-left: 10px"><i class="fa fa-file-excel-o"></i> Export Excel</button>
                                <button class="btn btn-sm btn-info float-right m-t-n-xs" id="btnSearch"><i class="fa fa-file-pdf-o"></i> Export PDF</button>
                            </div>
                            <div class="form-group" style="margin-top: 30px">
                                @*<object data="@Url.Action(GlobalConst.GenerateReport, @form.CurrentController, new { Area = @form.CurrentArea})#view=FitH" style="width:100%;min-height:500px">*@
                                    <embed src="@Url.Action(GlobalConst.GenerateReport, @form.CurrentController, new { Area = @form.CurrentArea})#view=FitH" style="width:100%;min-height:500px" />
                                @*</object>*@
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


@section Scripts {
    <script type="text/javascript">
    </script>
}