@model Ardita.Models.ViewModels.UserRoles.UserRoleListViewModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="row wrapper border-bottom white-bg page-heading">
    <div class="col-lg-10">
        <h2>Role</h2>
        <ol class="breadcrumb">
            <li class="breadcrumb-item">
                <a href="@Url.Action("Index", "UserRole")">Detail User Roles</a>
            </li>
            <li class="active breadcrumb-item">
                <strong>Data</strong>
            </li>
        </ol>
    </div>
    <div class="col-lg-2">
    </div>
</div>
<div class="wrapper wrapper-content animated fadeInRight">
    <div class="row">
        <div class="col-lg-12">
            <div class="ibox ">
                <div class="ibox-title">
                    <h5>Roles</h5>
                </div>
                <div class="ibox-content">
                    <div class="row">
                        <div class="col-sm-6 b-r">
                            <form role="form" enctype="multipart/form-data" asp-controller="UserRole" asp-area="UserRole" asp-action="Save">
                                <div class="form-group">
                                    <label>Username</label>
                                    <input type="hidden" asp-for="UserRole.UserId" value="@(Model.Users == null ? string.Empty : Model.Users.UserId)" />
                                    <input type="text" placeholder="" class="form-control" value="@(Model.Users == null ? string.Empty : Model.Users.Username)" disabled="">
                                </div>
                                <div class="form-group">
                                    <label>Role</label>
                                    <select asp-for="UserRole.RoleId" id="RoleId" class="select2_demo_1 form-control">
                                        @foreach (var item in Model.Roles)
                                        {
                                            <option value="@item.RoleId">@item.Name</option>
                                        }
                                    </select>
                                </div>
                                <div class="form-group">
                                    <a href="@Url.Action("Index", "UserRole", new { Area = "UserRole" })" class="btn btn-sm btn-danger float-right m-t-n-xs">Cancel</a>
                                    <button class="btn btn-sm btn-primary float-right m-t-n-xs mr-1" type="submit">Add New</button>
                                </div>
                            </form>
                        </div>
                    </div>
                    <table id="tblRole" class="table table-striped table-bordered table-hover dataTables-example">
                        <thead>
                            <tr>
                                <th>Role Code</th>
                                <th>Role Name</th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model.UserRoles)
                            {
                                <tr>
                                    <td>@item.RoleCode</td>
                                    <td>@item.RoleName</td>
                                    <td><a class="btn btn-danger btn-sm" href="@Url.Action("Remove", "UserRole", new { Area="UserRole", id = item.UserRoleId})">Remove</a></td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>

    </div>
</div>
@section Scripts {
    <script type="text/javascript">
        $(document).ready(function () {
            var table = $('#tblRole').DataTable({
                searching: false,
                filter: false,
                lengthChange: false
            });

            $("#RoleId").select2({
                theme: 'bootstrap4',
            });
        });
    </script>
}