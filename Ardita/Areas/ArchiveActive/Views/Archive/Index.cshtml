@using Ardita.Globals;

@{
    Layout = Const.ViewStart;
}

<div class="row wrapper border-bottom white-bg page-heading">
    <div class="col-lg-10">
        <h2>Archive</h2>
        <ol class="breadcrumb">
            <li class="breadcrumb-item">
                <a href="@Url.Action(Const.Index, Const.Home)"><i class="fa fa-home"></i></a>
            </li>
            <li class="breadcrumb-item">
                Archive Active
            </li>
            <li class="active breadcrumb-item">
                <strong>Archive</strong>
            </li>
        </ol>
    </div>
    <div class="col-lg-2">
    </div>
</div>
<div class="wrapper wrapper-content animated fadeInRight">
    <div class="row">
        <div class="col-lg-12">
            <div class="ibox ">
                <div class="ibox-title">
                    <h5>Archive</h5>
                    <div class="ibox-tools">
                        <a href="@Url.Action(Const.Add, Const.Archive, new { Area = Const.ArchiveActive})" class="btn btn-sm btn-primary"><i class="fa fa-pencil"></i><span class="bold"> New</span></a>
                    </div>
                </div>
                <div class="ibox-content">
                    <table id="tbl" class="table table-striped table-hover dataTables-example" style="width:100%">
                        <thead>
                            <tr>
                                <th>No</th>
                                <th>Action</th>
                                <th>Archive Title</th>
                            </tr>
                        </thead>
                        <tbody></tbody>
                    </table>
                </div>
            </div>
        </div>

    </div>
</div>

@section Scripts {
    <script type="text/javascript">
        $(document).ready(function () {
            bsCustomFileInput.init();

            var table = $('#tbl').DataTable({
                processing: true,
                serverSide: true,
                scrollX: true,
                filter: true,
                ajax: {
                    "url": '@Url.Action(Const.GetData, Const.Archive, new { Area = Const.ArchiveActive})',
                    "type": "POST",
                    "datatype": "json"
                },
                columnDefs: [
                    {
                        width: 50, targets: 0
                    }
                ],
                fixedColumns: true,
                columns: [
                    {
                        "data": "archiveId", "orderable": false, "searchable": false, "render": function (data, type, row, meta) {
                            return meta.row + meta.settings._iDisplayStart + 1;
                        }
                    },
                    {
                        "data": "archiveId",
                        "render": function (data, type, row, meta) {
                            var detail = `<a class="btn btn-sm btn-warning" href="@Url.Action(Const.Detail, Const.Archive, new { Area = Const.ArchiveActive, Id = -1 })"><i class="fa fa-eye"></i> </a>`;
                            detail = detail.replace("-1", row.archiveId);

                            var edit = `<a class="btn btn-sm btn-default" href="@Url.Action(Const.Update, Const.Archive, new { Area = Const.ArchiveActive, Id = -1 })"><i class="fa fa-pencil"></i> </a>`;
                            edit = edit.replace("-1", row.archiveId);

                            var remove = `<a class="btn btn-sm btn-danger" href="@Url.Action(Const.Remove, Const.Archive, new { Area = Const.ArchiveActive, Id = -1 })"><i class="fa fa-trash"></i> </a>`;
                            remove = remove.replace("-1", row.archiveId);

                            var JoinButton = edit.concat(" ", detail).concat(" ", remove);
                            return JoinButton;
                        }
                    },
                    { "data": "titleArchive", "Title Archive": "TitleArchive", "autoWidth": true }
                ]
            });
        });
    </script>
}