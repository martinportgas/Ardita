@section Scripts {
    <script type="text/javascript">

        function submitAll(par){
            swal({
                title: "Anda yakin ingin submit?",
                text: "Mohon periksa kembali sebelum submit!",
                type: "warning",
                showCancelButton: true,
                confirmButtonColor: "#DD6B55",
                confirmButtonText: "Save",
                cancelButtonText: "Cancel",
                closeOnConfirm: false,
                closeOnCancel: false
            },
                function (isConfirm) {
                    if (isConfirm) {
                        $('#hfSubmitType').val(par);
                        $("#formSubmit").submit();
                    } else {
                        swal("Dibatalkan", "Anda telah membatalkan submit!", "error");
                    }
                });
        }

        function initDropdown() {
            initGlobalDropdown($('#txtArchiveUnitId'), '@Url.Action(GlobalConst.BindArchiveUnitsByCompanyIdAndParam, GlobalConst.Archive, new { Area = GlobalConst.ArchiveActive })', $('#txtCompanyId'));

            initGlobalDropdown($('#txtFloorId'), '@Url.Action(GlobalConst.BindParamFloorsByArchiveUnitId, GlobalConst.Archive, new { Area = GlobalConst.ArchiveActive })', $('#txtArchiveUnitId'));

            initGlobalDropdown($('#txtRoomId'), '@Url.Action(GlobalConst.BindParamRoomActiveByFloorId, GlobalConst.Archive, new { Area = GlobalConst.ArchiveActive })', $('#txtFloorId'));

            initGlobalDropdown($('#txtRackId'), '@Url.Action(GlobalConst.BindParamRackByRoomId, GlobalConst.Archive, new { Area = GlobalConst.ArchiveActive })', $('#txtRoomId'));

            initGlobalDropdown($('#txtLevelId'), '@Url.Action(GlobalConst.BindParamLevelByRackId, GlobalConst.Archive, new { Area = GlobalConst.ArchiveActive })', $('#txtRackId'));

            initGlobalDropdown($('#txtRowId'), '@Url.Action(GlobalConst.BindParamRowByLevelId, GlobalConst.Archive, new { Area = GlobalConst.ArchiveActive })', $('#txtLevelId'));

            initGlobalDropdown($('#txtCreatorId'), '@Url.Action(GlobalConst.BindParamCreatorByArchiveUnitId, GlobalConst.Archive, new { Area = GlobalConst.ArchiveActive })', $('#txtArchiveUnitId'));

            initGlobalDropdown($('#txtSubjectClassificationId'), '@Url.Action(GlobalConst.BindParamClassificationSubjectIdByClassificationId, GlobalConst.Archive, new { Area = GlobalConst.ArchiveActive })', $('#txtClassificationId'));
        }

        $(document).ready(function () {

            initDropdown();

            $('#checkAll').on('change', function () {
                var checked = $(this).prop('checked');

                $(`.check`).each(function () {
                    $(this).prop('checked', checked);
                });
            });

            var notif = '@TempData[GlobalConst.Notification]';

            if (notif != '') {
                if (notif == '@GlobalConst.Success') {
                    swal({ title: "Success!", text: 'Berhasil Submit!', type: "success" });
                }else{
                    swal({ title: "Failed!", text: notif, type: "info" });
                }
            }

            bsCustomFileInput.init();

            var table = $('#tbl').DataTable({
                lengthMenu: [10,25,50,100,250,500,750,1000],
                processing: true,
                serverSide: true,
                scrollX: true,
                filter: true,
                ajax: {
                    "url": '@Url.Action(GlobalConst.GetData, GlobalConst.Archive, new { Area = GlobalConst.ArchiveActive})',
                    "type": "POST",
                    "datatype": "json"
                },
                columnDefs: [
                    {
                        width: 50, targets: 0
                    }, {
                        width: 100, targets: 1
                    }, {
                        width: 100, targets: 10
                    },
                    {
                        targets: [10],
                        className: `text-center`
                    },
                ],
                fixedColumns: true,
                order: [[0, 'desc']],
                columns: [
                    {
                        "data": "archiveId", "name": "createdDate", "orderable": false, "render": function (data, type, row, meta) {
                            return meta.row + meta.settings._iDisplayStart + 1;
                        }
                    },
                    {
                        "data": "archiveId",
                        "render": function (data, type, row, meta) {
                            $('#btnExport').attr('href', row.export);

                            var detail = `<a class="btn btn-sm btn-warning" href="@Url.Action(GlobalConst.Detail, GlobalConst.Archive, new { Area = GlobalConst.ArchiveActive, Id = -1 })"><i class="fa fa-eye"></i> </a>`;
                            detail = detail.replace("-1", row.archiveId);

                            var edit = ``;

                            //if (row.statusId == 1) {
                                edit = `<a class="btn btn-sm btn-primary" href="@Url.Action(GlobalConst.Update, GlobalConst.Archive, new { Area = GlobalConst.ArchiveActive, Id = -1 })"><i class="fa fa-pencil"></i> </a>`;
                                edit = edit.replace("-1", row.archiveId);
                            //}

                            var remove = ``;
                            //if (row.statusId == 1) {
                                remove = `<a class="btn btn-sm btn-danger" href="@Url.Action(GlobalConst.Remove, GlobalConst.Archive, new { Area = GlobalConst.ArchiveActive, Id = -1 })"><i class="fa fa-trash"></i> </a>`;
                                remove = remove.replace("-1", row.archiveId);
                            //}


                            var JoinButton = '<div style="width:100px">' + edit.concat(" ", detail).concat(" ", remove) + '</div>';
                            return JoinButton;
                        }
                    },
                    { "data": "archiveCode", "name": "archiveCode", "autoWidth": true },
                    { "data": "documentNo", "name": "documentNo", "autoWidth": true },
                    { "data": "titleArchive", "name": "titleArchive", "autoWidth": true },
                    { "data": "createdDateArchive", "name": "createdDateArchive", "autoWidth": true },
                    { "data": "archiveDescription", "name": "archiveDescription", "autoWidth": true },
                    { "data": "gmdName", "name": "gmd.gmdName", "autoWidth": true },
                    { "data": "securityClassificationName", "name": "securityClassification.securityClassificationName", "autoWidth": true },
                    { "data": "creatorName", "name": "creator.creatorName", "autoWidth": true },
                    { "data": "subjectClassificationName", "name": "subSubjectClassification.subjectClassification.subjectClassificationName", "autoWidth": true },
                    { "data": "subSubjectClassificationName", "name": "subSubjectClassification.subSubjectClassificationName", "autoWidth": true },
                    {
                        "data": "status", "name": "status.name", "autoWidth": true, "render": function (data, type, row, meta) {
                            return `<span class="badge badge-pill center ${row.color}">${data}</span>`;
                        }
                    },
                    {
                        "data": "archiveId", "orderable": false, "searchable": false, "render": function (data, type, row, meta) {
                            return row.statusId == 1 ? `<input type="checkbox" class="check" value='${data}' name="listArchive[]" />` : '';
                        }
                    }
                ]
            });

            var defaultSearch = '1=1';

            $('#btnSearch').on('click', function () {
                var and = ' && ';
                var no = $('#txtNo').val() == '' ? '1=1' : `DocumentNo.ToLower().Contains(\"${$('#txtNo').val().toLowerCase()}\")`;
                var title = $('#txtTitle').val() == '' ? '1=1' : `TitleArchive.ToLower().Contains(\"${$('#txtTitle').val().toLowerCase()}\")`;
                var creator = $('#txtCreatorId').val() == '' ? '1=1' : `CreatorId == \"${$('#txtCreatorId').val()}\"`;
                var year = $('#txtYear').val() == '' ? '1=1' : `createdDateArchive.Year == ${$('#txtYear').val()}`;
                var classification = $('#txtClassificationId').val() == '' ? '1=1' : `SubSubjectClassification.SubjectClassification.ClassificationId == \"${$('#txtClassificationId').val()}\"`;
                var subclassification = $('#txtSubjectClassificationId').val() == '' ? '1=1' : `SubSubjectClassification.SubjectClassificationId == \"${$('#txtSubjectClassificationId').val()}\"`;
                var archiveUnit = $('#txtArchiveUnitId').val() == '' ? '1=1' : `Creator.ArchiveUnitId == \"${$('#txtArchiveUnitId').val()}\"`;
                var floor = $('#txtFloorId').val() == '' ? '1=1' : `TrxMediaStorageDetails.FirstOrDefault().MediaStorage.Row.Level.Rack.Room.FloorId == \"${$('#txtFloorId').val()}\"`;
                var room = $('#txtRoomId').val() == '' ? '1=1' : `TrxMediaStorageDetails.FirstOrDefault().MediaStorage.Row.Level.Rack.RoomId == \"${$('#txtRoomId').val()}\"`;
                var rack = $('#txtRackId').val() == '' ? '1=1' : `TrxMediaStorageDetails.FirstOrDefault().MediaStorage.Row.Level.RackId == \"${$('#txtRackId').val()}\"`;
                var level = $('#txtLevelId').val() == '' ? '1=1' : `TrxMediaStorageDetails.FirstOrDefault().MediaStorage.Row.LevelId == \"${$('#txtLevelId').val()}\"`;
                var row = $('#txtRowId').val() == '' ? '1=1' : `TrxMediaStorageDetails.FirstOrDefault().MediaStorage.RowId == \"${$('#txtRowId').val()}\"`;
                var search = `${defaultSearch}${and}${no}${and}${title}${and}${creator}${and}${year}${and}${classification}${and}${subclassification}${and}${archiveUnit}${and}${floor}${and}${room}${and}${rack}${and}${level}${and}${row}`;
                
                table
                    .column(0).search($('#txtStartDate').val())
                    .column(1).search($('#txtEndDate').val())
                    .column(2).search(search)
                    .draw();
            });
        });
    </script>
}