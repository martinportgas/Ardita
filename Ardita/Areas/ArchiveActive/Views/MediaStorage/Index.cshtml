@using Ardita.Globals;

@{
    Layout = Const.ViewStart;
}

<div class="row wrapper border-bottom white-bg page-heading">
    <div class="col-lg-10">
        <h2>Media Storage</h2>
        <ol class="breadcrumb">
            <li class="breadcrumb-item">
                <a href="@Url.Action(Const.Index, Const.Home, new { Area = Const.General })"><i class="fa fa-home"></i></a>
            </li>
            <li class="breadcrumb-item">
                Archive Active
            </li>
            <li class="active breadcrumb-item">
                <strong>Media Storage</strong>
            </li>
        </ol>
    </div>
    <div class="col-lg-2">
    </div>
</div>
<div class="wrapper wrapper-content animated fadeInRight">
    <div class="row">
        <div class="col-lg-12">
            <div class="ibox ">
                <div class="ibox-title">
                    <h5>Archive Unit</h5>
                    <div class="ibox-tools">
                        <a href="@Url.Action(Const.Add, Const.MediaStorage, new { Area = Const.ArchiveActive})" class="btn btn-sm btn-primary"><i class="fa fa-pencil"></i><span class="bold"> New</span></a>
                    </div>
                </div>
                <div class="ibox-content">
                    <a class="btn btn-sm btn-info" href="@Url.Action("BindLabel", Const.MediaStorage, new { Area = Const.ArchiveActive })"><i class="fa fa-download"></i> </a>

                    <table id="tbl" class="table table-striped table-hover dataTables-example" style="width:100%">
                        <thead>
                            <tr>
                                <th>No</th>
                                <th>Action</th>
                                <th>Media Storage Code</th>
                                <th>Media Storage Name</th>
                                <th>Status</th>
                            </tr>
                        </thead>
                        <tbody></tbody>
                    </table>
                </div>
            </div>
        </div>

    </div>
</div>

@section Scripts {
    <script type="text/javascript">
        $(document).ready(function () {
            bsCustomFileInput.init();
            function showMsg() {
                alert("asd");
            }
            var table = $('#tbl').DataTable({
                processing: true,
                serverSide: true,
                scrollX: true,
                filter: true,
                ajax: {
                    "url": '@Url.Action(Const.GetData, Const.MediaStorage, new { Area = Const.ArchiveActive})',
                    "type": "POST",
                    "datatype": "json"
                },
                columnDefs: [
                    {
                        width: 50, targets: 0
                    }
                ],
                fixedColumns: true,
                columns: [
                    {
                        "data": "mediaStorageId", "orderable": false, "searchable": false, "render": function (data, type, row, meta) {
                            return meta.row + meta.settings._iDisplayStart + 1;
                        }
                    },
                    {
                        "data": "mediaStorageId",
                        "render": function (data, type, row, meta) {
                            var detail = `<a class="btn btn-sm btn-warning" href="@Url.Action(Const.Detail, Const.MediaStorage, new { Area = Const.ArchiveActive, Id = -1 })"><i class="fa fa-eye"></i> </a>`;
                            detail = detail.replace("-1", row.mediaStorageId);

                            var edit = `<a class="btn btn-sm btn-primary" data-toggle="tooltip" title="Data Has Been Submitted" href="#"><i class="fa fa-pencil"></i> </a>`;

                            if (row.statusId == 1) {
                                 edit = `<a class="btn btn-sm btn-primary" href="@Url.Action(Const.Update, Const.MediaStorage, new { Area = Const.ArchiveActive, Id = -1 })"><i class="fa fa-pencil"></i> </a>`;
                                 edit = edit.replace("-1", row.mediaStorageId);
                            }

                            var remove = `<a class="btn btn-sm btn-danger" href="@Url.Action(Const.Remove, Const.MediaStorage, new { Area = Const.ArchiveActive, Id = -1 })"><i class="fa fa-trash"></i> </a>`;
                            remove = remove.replace("-1", row.mediaStorageId);

                            var downloadQr = `<a class="btn btn-sm btn-info" data-toggle="tooltip" title="Data Still Draft" href="#"><i class="fa fa-download"></i> </a>`;
                            if (row.statusId == 5) {
                                downloadQr = `<a class="btn btn-sm btn-info" href="@Url.Action(Const.BindQrCode, Const.MediaStorage, new { Area = Const.ArchiveActive, text = -1})"><i class="fa fa-download"></i> </a>`;
                                downloadQr = downloadQr.replace("-1", row.mediaStorageCode);
                            }

                            var downloadLbl = `<a class="btn btn-sm btn-info" href="@Url.Action(Const.BindLabel, Const.MediaStorage, new { Area = Const.ArchiveActive, MediaStorageId = -1})"><i class="fa fa-download"></i> </a>`;
                            downloadLbl = downloadLbl.replace("-1", row.mediaStorageId);

                            var JoinButton = edit.concat(" ", detail).concat(" ", remove).concat(" ", downloadQr).concat(" ", downloadLbl);
                            return JoinButton;
                        }
                    },
                    { "data": "mediaStorageCode", "Code": "mediaStorageCode", "autoWidth": true },
                    { "data": "mediaStorageName", "Name": "mediaStorageName", "autoWidth": true },
                    {
                        "data": "status.name", "name": "extendName", "autoWidth": true, "render": function (data, type, row, meta) {
                            return `<span class="badge ${row.status.color}" style="width:100%">${data}</span>`;
                        }
                    },
                ]
            });

            $('[data-toggle="tooltip"]').tooltip();
        });
    </script>
}