@using Ardita.Extensions;

@{
    Layout = GlobalConst.ViewStart;
}

<div class="row wrapper border-bottom white-bg page-heading">
    <div class="col-lg-10">
        <h2>Media Storage</h2>
        <ol class="breadcrumb">
            <li class="breadcrumb-item">
                <a href="@Url.Action(GlobalConst.Index, GlobalConst.Home, new { Area = GlobalConst.General })"><i class="fa fa-home"></i></a>
            </li>
            <li class="breadcrumb-item">
                Archive Active
            </li>
            <li class="active breadcrumb-item">
                <strong>Media Storage</strong>
            </li>
        </ol>
    </div>
    <div class="col-lg-2">
    </div>
</div>

<div class="wrapper wrapper-content animated fadeInRight pb-0">
    <div class="row">
        <div class="col-lg-12">
            <div class="ibox ">
                <div class="ibox-title">
                    <h4>Pencarian</h4>
                    <div class="ibox-tools">
                        <a class="collapse-link">
                            <i class="fa fa-chevron-up"></i>
                        </a>
                    </div>
                </div>
                <div class="ibox-content">
                    <div class="row">
                        <div class="col-sm-6 b-r">
                            <div class="form-group row rowreport">
                                <label class="col-lg-3 col-form-label">Judul Arsip</label>
                                <div class="col-lg-9">
                                    <input type="text" id="txtTitle" class="form-control" placeholder="Judul Arsip" />
                                </div>
                            </div>
                            <div class="form-group row rowreport">
                                <label class="col-lg-3 col-form-label">Pencipta Arsip</label>
                                <div class="col-lg-9">
                                    <select id="txtCreatorId" class="form-control" asp-items="ViewBag.ListArchiveCreator" data-placeholder="-- Semua --"><option value=""></option></select>
                                </div>
                            </div>
                            <div class="form-group row rowreport">
                                <label class="col-lg-3 col-form-label">Tahun</label>
                                <div class="col-lg-9">
                                    <select id="txtYear" class="select2_demo_1 form-control"
                                            data-placeholder="-- Semua --">
                                        <option value=""></option>
                                        @for (int i = 0; i > -30; i--)
                                        {
                                            <option value="@DateTime.Now.AddYears(i).ToString("yyyy")">@DateTime.Now.AddYears(i).ToString("yyyy")</option>
                                        }
                                    </select>
                                </div>
                            </div>
                            <div class="form-group row rowreport">
                                <label class="col-lg-3 col-form-label">Klasifikasi</label>
                                <div class="col-lg-9">
                                    <select id="txtClassificationId" class="form-control" asp-items="ViewBag.ListClassification" data-placeholder="-- Semua --"><option value=""></option></select>
                                </div>
                            </div>
                            <div class="form-group row rowreport">
                                <label class="col-lg-3 col-form-label">Subjek Klasifikasi</label>
                                <div class="col-lg-9">
                                    <select id="txtSubjectClassificationId" class="form-control" asp-items="ViewBag.ListSubjectClassification" data-placeholder="-- Semua --"><option value=""></option></select>
                                </div>
                            </div>
                        </div>
                        <div class="col-sm-6">
                            <div class="form-group row rowreport">
                                <label class="col-lg-3 col-form-label">Lokasi Kearsipan</label>
                                <div class="col-lg-9">
                                    <select id="txtArchiveUnitId" class="form-control" asp-items="ViewBag.ListArchiveUnit" data-placeholder="-- Semua --"><option value=""></option></select>
                                </div>
                            </div>
                            <div class="form-group row rowreport">
                                <label class="col-lg-3 col-form-label">Lantai</label>
                                <div class="col-lg-9">
                                    <select id="txtFloorId" class="form-control" asp-items="ViewBag.ListFloor" data-placeholder="-- Semua --"><option value=""></option></select>
                                </div>
                            </div>
                            <div class="form-group row rowreport">
                                <label class="col-lg-3 col-form-label">Ruangan</label>
                                <div class="col-lg-9">
                                    <select id="txtRoomId" class="form-control" asp-items="ViewBag.ListRoom" data-placeholder="-- Semua --"><option value=""></option></select>
                                </div>
                            </div>
                            <div class="form-group row rowreport">
                                <label class="col-lg-3 col-form-label">Rak</label>
                                <div class="col-lg-9">
                                    <select id="txtRackId" class="form-control" asp-items="ViewBag.ListRack" data-placeholder="-- Semua --"><option value=""></option></select>
                                </div>
                            </div>
                            <div class="form-group row rowreport">
                                <label class="col-lg-3 col-form-label">Tingkat</label>
                                <div class="col-lg-9">
                                    <select id="txtLevelId" class="form-control" asp-items="ViewBag.ListLevel" data-placeholder="-- Semua --"><option value=""></option></select>
                                </div>
                            </div>
                            <div class="form-group row rowreport">
                                <label class="col-lg-3 col-form-label">Baris</label>
                                <div class="col-lg-9">
                                    <select id="txtRowId" class="form-control" asp-items="ViewBag.ListRow" data-placeholder="-- Semua --"><option value=""></option></select>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-sm-12">
                            <div class="form-group mb-0">
                                <button class="btn btn-sm btn-success pull-right" id="btnSearch"><i class="fa fa-filter"></i> Cari</button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="wrapper wrapper-content animated fadeInRight">
    <div class="row">
        <div class="col-lg-12">
            <div class="ibox ">
                <div class="ibox-title">
                    <h5>Archive Unit</h5>
                    <div class="ibox-tools">
                        <a href="@Url.Action(GlobalConst.Add, GlobalConst.MediaStorage, new { Area = GlobalConst.ArchiveActive})" class="btn btn-sm btn-primary"><i class="fa fa-pencil"></i><span class="bold"> New</span></a>
                    </div>
                </div>
                <div class="ibox-content">
                    <table id="tbl" class="table table-striped table-hover dataTables-example" style="width:100%">
                        <thead>
                            <tr>
                                <th>No</th>
                                <th>Action</th>
                                <th>Kode Label</th>
                                <th>Lokasi</th>
                                <th>Jenis Penyimpanan</th>
                                <th>Subjek Klasifikasi</th>
                                <th>Unit Pencipta</th>
                                <th>Tahun</th>
                                <th>Status</th>
                            </tr>
                        </thead>
                        <tbody></tbody>
                    </table>
                </div>
            </div>
        </div>

    </div>
</div>

@section Scripts {
    <script type="text/javascript">
        function initDropdown() {
            initGlobalDropdown($('#txtArchiveUnitId'), '@Url.Action(GlobalConst.BindArchiveUnitsByCompanyIdAndParam, GlobalConst.Archive, new { Area = GlobalConst.ArchiveActive })', $('#txtCompanyId'));

            initGlobalDropdown($('#txtFloorId'), '@Url.Action(GlobalConst.BindParamFloorsByArchiveUnitId, GlobalConst.Archive, new { Area = GlobalConst.ArchiveActive })', $('#txtArchiveUnitId'));

            initGlobalDropdown($('#txtRoomId'), '@Url.Action(GlobalConst.BindParamRoomActiveByFloorId, GlobalConst.Archive, new { Area = GlobalConst.ArchiveActive })', $('#txtFloorId'));

            initGlobalDropdown($('#txtRackId'), '@Url.Action(GlobalConst.BindParamRackByRoomId, GlobalConst.Archive, new { Area = GlobalConst.ArchiveActive })', $('#txtRoomId'));

            initGlobalDropdown($('#txtLevelId'), '@Url.Action(GlobalConst.BindParamLevelByRackId, GlobalConst.Archive, new { Area = GlobalConst.ArchiveActive })', $('#txtRackId'));

            initGlobalDropdown($('#txtRowId'), '@Url.Action(GlobalConst.BindParamRowByLevelId, GlobalConst.Archive, new { Area = GlobalConst.ArchiveActive })', $('#txtLevelId'));

            initGlobalDropdown($('#txtCreatorId'), '@Url.Action(GlobalConst.BindParamCreatorByArchiveUnitId, GlobalConst.Archive, new { Area = GlobalConst.ArchiveActive })', $('#txtArchiveUnitId'));

            initGlobalDropdown($('#txtSubjectClassificationId'), '@Url.Action(GlobalConst.BindParamClassificationSubjectIdByClassificationId, GlobalConst.Archive, new { Area = GlobalConst.ArchiveActive })', $('#txtClassificationId'));
        }
        $(document).ready(function () {
            initDropdown();
            bsCustomFileInput.init();
            var table = $('#tbl').DataTable({
                processing: true,
                serverSide: true,
                scrollX: true,
                filter: true,
                ajax: {
                    "url": '@Url.Action(GlobalConst.GetData, GlobalConst.MediaStorage, new { Area = GlobalConst.ArchiveActive})',
                    "type": "POST",
                    "datatype": "json"
                },
                columnDefs: [
                    {
                        width: 50, targets: 0
                    }
                ],
                fixedColumns: true,
                order: [[0, 'desc']],
                columns: [
                    {
                        "data": "mediaStorageId", "name": "createdDate", "orderable": false, "searchable": false, "render": function (data, type, row, meta) {
                            return meta.row + meta.settings._iDisplayStart + 1;
                        }
                    },
                    {
                        "data": "mediaStorageId",
                        "render": function (data, type, row, meta) {
                            var detail = `<a class="btn btn-sm btn-warning" data-toggle = "tooltip" data-placement = "left" title = "Detail" href="@Url.Action(GlobalConst.Detail, GlobalConst.MediaStorage, new { Area = GlobalConst.ArchiveActive, Id = -1 })"><i class="fa fa-eye"></i> </a>`;
                            detail = detail.replace("-1", row.mediaStorageId);

                            var edit = ``;

                            //if (row.statusId == 1) {
                                edit = `<a class="btn btn-sm btn-primary" data-toggle = "tooltip" data-placement = "left" title = "Edit" href="@Url.Action(GlobalConst.Update, GlobalConst.MediaStorage, new { Area = GlobalConst.ArchiveActive, Id = -1 })"><i class="fa fa-pencil"></i> </a>`;
                                 edit = edit.replace("-1", row.mediaStorageId);
                            //}

                            var remove = ``;

                            //if (row.statusId == 1) {
                                remove = `<a class="btn btn-sm btn-danger" data-toggle = "tooltip" data-placement = "left" title = "Remove" href="@Url.Action(GlobalConst.Remove, GlobalConst.MediaStorage, new { Area = GlobalConst.ArchiveActive, Id = -1 })"><i class="fa fa-trash"></i> </a>`;
                                remove = remove.replace("-1", row.mediaStorageId);
                            //}

                            var downloadQr = ``;
                            if (row.statusId == 5) {
                                downloadQr = `<a class="btn btn-sm btn-info" data-toggle = "tooltip" data-placement = "left" title = "Download QR" href="@Url.Action(GlobalConst.BindLabel, GlobalConst.MediaStorage, new { Area = GlobalConst.ArchiveActive, MediaStorageId = -1})"><i class="fa fa-download"></i> </a>`;
                                downloadQr = downloadQr.replace("-1", row.mediaStorageId);
                            }

                            var isUsed = ``;
                            if (row.statusId == 5) {
                                isUsed = `<a class="btn btn-sm btn-success" data-toggle = "tooltip" data-placement = "left" title = "Out Indicator" href="@Url.Action(GlobalConst.IsUsed, GlobalConst.MediaStorage, new { Area = GlobalConst.ArchiveActive, Id = -1})"><i class="fa fa-folder-open"></i> </a>`;
                                isUsed = isUsed.replace("-1", row.mediaStorageId);
                            }

                            var JoinButton = edit.concat(" ", detail).concat(" ", remove).concat(" ", downloadQr).concat(" ", isUsed);
                            return JoinButton;
                        }
                    },
                    { "data": "labelCode", "name": "row.level.rack.rackName", "autoWidth": true },
                    { "data": "archiveUnitName", "name": "typeStorage.archiveUnit.archiveUnitName", "autoWidth": true },
                    { "data": "typeStorageName", "name": "typeStorage.typeStorageName", "autoWidth": true },
                    { "data": "subjectClassificationName", "name": "subjectClassification.subjectClassificationName", "autoWidth": true },
                    { "data": "creatorName", "name": "subjectClassification.classification.creator.creatorName", "autoWidth": true },
                    { "data": "archiveYear", "name": "archiveYear", "autoWidth": true },
                    {
                        "data": "status", "name": "extendName", "autoWidth": true, "render": function (data, type, row, meta) {
                            return `<span class="badge badge-pill ${row.color}" style="width:100%">${data}</span>`;
                        }
                    },
                ]
            });

            var defaultSearch = '1=1';

            $('#btnSearch').on('click', function () {
                var and = ' && ';
                var title = $('#txtTitle').val() == '' ? '1=1' : `TrxMediaStorageDetails.Any(x => x.Archive.TitleArchive.Contains(\"${$('#txtTitle').val()}\"))`;
                var creator = $('#txtCreatorId').val() == '' ? '1=1' : `SubjectClassification.Classification.CreatorId == \"${$('#txtCreatorId').val()}\"`;
                var year = $('#txtYear').val() == '' ? '1=1' : `ArchiveYear.Contains(\"${$('#txtYear').val()}\")`;
                var classification = $('#txtClassificationId').val() == '' ? '1=1' : `SubjectClassification.ClassificationId == \"${$('#txtClassificationId').val()}\"`;
                var subclassification = $('#txtSubjectClassificationId').val() == '' ? '1=1' : `SubjectClassificationId == \"${$('#txtSubjectClassificationId').val()}\"`;
                var archiveUnit = $('#txtArchiveUnitId').val() == '' ? '1=1' : `TypeStorage.ArchiveUnitId == \"${$('#txtArchiveUnitId').val()}\"`;
                var floor = $('#txtFloorId').val() == '' ? '1=1' : `TrxMediaStorageDetails.FirstOrDefault().MediaStorage.Row.Level.Rack.Room.FloorId == \"${$('#txtFloorId').val()}\"`;
                var room = $('#txtRoomId').val() == '' ? '1=1' : `TrxMediaStorageDetails.FirstOrDefault().MediaStorage.Row.Level.Rack.RoomId == \"${$('#txtRoomId').val()}\"`;
                var rack = $('#txtRackId').val() == '' ? '1=1' : `TrxMediaStorageDetails.FirstOrDefault().MediaStorage.Row.Level.RackId == \"${$('#txtRackId').val()}\"`;
                var level = $('#txtLevelId').val() == '' ? '1=1' : `TrxMediaStorageDetails.FirstOrDefault().MediaStorage.Row.LevelId == \"${$('#txtLevelId').val()}\"`;
                var row = $('#txtRowId').val() == '' ? '1=1' : `TrxMediaStorageDetails.FirstOrDefault().MediaStorage.RowId == \"${$('#txtRowId').val()}\"`;
                var search = `${defaultSearch}${and}${title}${and}${creator}${and}${year}${and}${classification}${and}${subclassification}${and}${archiveUnit}${and}${floor}${and}${room}${and}${rack}${and}${level}${and}${row}`;

                table
                    //.column(0).search($('#txtStartDate').val())
                    //.column(1).search($('#txtEndDate').val())
                    .column(2).search(search)
                    .draw();
            });

            $('[data-toggle="tooltip"]').tooltip();
        });
    </script>
}