@using Ardita.Extensions;

@{
    Layout = GlobalConst.ViewStart;
}

<div class="row wrapper border-bottom white-bg page-heading">
    <div class="col-lg-10">
        <h2>Media Storage</h2>
        <ol class="breadcrumb">
            <li class="breadcrumb-item">
                <a href="@Url.Action(GlobalConst.Index, GlobalConst.Home, new { Area = GlobalConst.General })"><i class="fa fa-home"></i></a>
            </li>
            <li class="breadcrumb-item">
                Archive Active
            </li>
            <li class="active breadcrumb-item">
                <strong>Media Storage</strong>
            </li>
        </ol>
    </div>
    <div class="col-lg-2">
    </div>
</div>
<div class="wrapper wrapper-content animated fadeInRight">
    <div class="row">
        <div class="col-lg-12">
            <div class="ibox ">
                <div class="ibox-title">
                    <h5>Archive Unit</h5>
                    <div class="ibox-tools">
                        <a href="@Url.Action(GlobalConst.Add, GlobalConst.MediaStorage, new { Area = GlobalConst.ArchiveActive})" class="btn btn-sm btn-primary"><i class="fa fa-pencil"></i><span class="bold"> New</span></a>
                    </div>
                </div>
                <div class="ibox-content">
                    <table id="tbl" class="table table-striped table-hover dataTables-example" style="width:100%">
                        <thead>
                            <tr>
                                <th>No</th>
                                <th>Action</th>
                                <th>Kode Media Penyimpanan</th>
                                <th>Lokasi</th>
                                <th>Unit Pencipta</th>
                                <th>Sub-subjek Klasifikasi</th>
                                <th>Tahun</th>
                                <th>Status</th>
                            </tr>
                        </thead>
                        <tbody></tbody>
                    </table>
                </div>
            </div>
        </div>

    </div>
</div>

@section Scripts {
    <script type="text/javascript">
        $(document).ready(function () {
            bsCustomFileInput.init();
            var table = $('#tbl').DataTable({
                processing: true,
                serverSide: true,
                scrollX: true,
                filter: true,
                ajax: {
                    "url": '@Url.Action(GlobalConst.GetData, GlobalConst.MediaStorage, new { Area = GlobalConst.ArchiveActive})',
                    "type": "POST",
                    "datatype": "json"
                },
                columnDefs: [
                    {
                        width: 50, targets: 0
                    }
                ],
                fixedColumns: true,
                order: [[0, 'desc']],
                columns: [
                    {
                        "data": "mediaStorageId", "name": "createdDate", "orderable": false, "searchable": false, "render": function (data, type, row, meta) {
                            return meta.row + meta.settings._iDisplayStart + 1;
                        }
                    },
                    {
                        "data": "mediaStorageId",
                        "render": function (data, type, row, meta) {
                            var detail = `<a class="btn btn-sm btn-warning" href="@Url.Action(GlobalConst.Detail, GlobalConst.MediaStorage, new { Area = GlobalConst.ArchiveActive, Id = -1 })"><i class="fa fa-eye"></i> </a>`;
                            detail = detail.replace("-1", row.mediaStorageId);

                            var edit = ``;

                            if (row.statusId == 1) {
                                 edit = `<a class="btn btn-sm btn-primary" href="@Url.Action(GlobalConst.Update, GlobalConst.MediaStorage, new { Area = GlobalConst.ArchiveActive, Id = -1 })"><i class="fa fa-pencil"></i> </a>`;
                                 edit = edit.replace("-1", row.mediaStorageId);
                            }

                            var remove = ``;

                            if (row.statusId == 1) {
                                remove = `<a class="btn btn-sm btn-danger" href="@Url.Action(GlobalConst.Remove, GlobalConst.MediaStorage, new { Area = GlobalConst.ArchiveActive, Id = -1 })"><i class="fa fa-trash"></i> </a>`;
                                remove = remove.replace("-1", row.mediaStorageId);
                            }

                            var downloadQr = ``;
                            if (row.statusId == 5) {
                                downloadQr = `<a class="btn btn-sm btn-info" href="@Url.Action(GlobalConst.BindLabel, GlobalConst.MediaStorage, new { Area = GlobalConst.ArchiveActive, MediaStorageId = -1})"><i class="fa fa-download"></i> </a>`;
                                downloadQr = downloadQr.replace("-1", row.mediaStorageId);
                            }

                            var JoinButton = edit.concat(" ", detail).concat(" ", remove).concat(" ", downloadQr);
                            return JoinButton;
                        }
                    },
                    { "data": "mediaStorageCode", "name": "mediaStorageCode", "autoWidth": true },
                    { "data": "archiveUnitName", "name": "subSubjectClassification.creator.archiveUnit.archiveUnitName", "autoWidth": true },
                    { "data": "creatorName", "name": "subSubjectClassification.creator.creatorName", "autoWidth": true },
                    { "data": "subSubjectClassificationName", "name": "subSubjectClassification.subSubjectClassificationName", "autoWidth": true },
                    { "data": "archiveYear", "name": "archiveYear", "autoWidth": true },
                    {
                        "data": "status", "name": "extendName", "autoWidth": true, "render": function (data, type, row, meta) {
                            return `<span class="badge badge-pill ${row.color}" style="width:100%">${data}</span>`;
                        }
                    },
                ]
            });

            $('[data-toggle="tooltip"]').tooltip();
        });
    </script>
}