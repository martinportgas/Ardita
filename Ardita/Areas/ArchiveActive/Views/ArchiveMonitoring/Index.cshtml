@using Ardita.Globals;

@{
    Layout = Const.ViewStart;
}

<div class="row wrapper border-bottom white-bg page-heading">
    <div class="col-lg-10">
        <h2>Archive Monitoring</h2>
        <ol class="breadcrumb">
            <li class="breadcrumb-item">
                <a href="@Url.Action(Const.Index, Const.Home, new { Area = Const.General })"><i class="fa fa-home"></i></a>
            </li>
            <li class="breadcrumb-item">
                Archive 
            </li>
            <li class="active breadcrumb-item">
                <strong>Archive Monitoring</strong>
            </li>
        </ol>
    </div>
    <div class="col-lg-2">
    </div>
</div>
<div class="wrapper wrapper-content animated fadeInRight">
    <div class="row">
        <div class="col-lg-12">
            <div class="ibox ">
                <div class="ibox-title">
                    <h5>Archive</h5>
                    <div class="ibox-tools">
                        
                    </div>
                </div>
                <div class="ibox-content">
                    <table id="tblArchiveMonitoring" class="table table-striped table-hover dataTables-example" style="width:100%">
                        <thead>
                            <tr>
                                <th>No</th>
                                <th>Action</th>
                                <th>Media</th>
                                <th>Pengirim</th>
                                <th>Klasifikasi Arsip</th>
                                <th>Kata Kunci</th>
                                <th>Judul Arsip</th>
                                <th>Pencipta Arsip</th>
                                <th>Tipe Arsip</th>
                                <th>Tanggal Dibuat</th>
                                <th>Retensi Aktif</th>
                                <th>Retensi In Aktif</th>
                                <th>Volume</th>
                            </tr>
                        </thead>
                        <tbody></tbody>
                    </table>
                </div>
            </div>
        </div>

    </div>
</div>
@section Scripts {
    <script type="text/javascript">

        $(document).ready(function () {
            bsCustomFileInput.init();
            var table = $('#tblArchiveMonitoring').DataTable({
                processing: true,
                serverSide: true,
                //deferRender: true,
                scrollX: true,
                filter: true,
                ajax: {
                    "url": '@Url.Action(Const.GetData, Const.ArchiveMonitoring, new { Area = Const.ArchiveActive})',
                    "type": "POST",
                    "datatype": "json",
                    "complete": function(xhr, responseText){
                        console.log(xhr);
                        console.log(responseText); //*** responseJSON: Array[0]
                    },
                    "error": function(xhr, responseText){
                        console.log(xhr);
                        console.log(responseText); //*** responseJSON: Array[0]
                    },
                },
                //sAjaxDataProp: '',
                columnDefs: [
                    {
                        width: 50, targets: 0
                    }
                ],
                fixedColumns: true,
                columns: [
                    {
                        "data": "archiveId", "name": "archiveId", "orderable": false, "searchable": false, "render": function (data, type, row, meta) {
                            return meta.row + meta.settings._iDisplayStart + 1;
                        }
                    },
                    {
                        "data": "archiveId", "orderable": false, "searchable": false,
                        "render": function (data, type, row, meta) {
                            var detail = `<a class="btn btn-sm btn-warning" href="@Url.Action(Const.Detail, Const.ArchiveMonitoring, new { Area = Const.ArchiveActive, Id = -1 })"><i class="fa fa-eye"></i> </a>`;
                                detail = detail.replace("-1", row.archiveId);

                            return detail;
                        }
                    },
                    { "data": "gmdName", "name": "gmd.gmdName", "autoWidth": true },
                    { "data": "typeSender", "name": "typeSender", "autoWidth": true },
                    { "data": "subSubjectClassificationName", "name": "subSubjectClassification.subSubjectClassificationName", "autoWidth": true },
                    { "data": "keyword", "name": "keyword", "autoWidth": true },
                    { "data": "titleArchive", "name": "titleArchive", "autoWidth": true },
                    { "data": "creatorName", "name": "creator.creatorName", "autoWidth": true },
                    { "data": "typeArchive", "name": "typeArchive", "autoWidth": true },
                    { "data": "createdDateArchive", "name": "createdDateArchive", "autoWidth": true },
                    { "data": "activeRetention", "name": "activeRetention", "autoWidth": true },
                    { "data": "inactiveRetention", "name": "inactiveRetention", "autoWidth": true },
                    { "data": "volume", "name": "volume", "autoWidth": true },
                ]
            });
        });

    </script>
}