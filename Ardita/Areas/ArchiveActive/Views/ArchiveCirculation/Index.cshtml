@using Ardita.Extensions;
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="row wrapper border-bottom white-bg page-heading">
    <div class="col-lg-10">
        <h2>Pemindahan Arsip</h2>
        <ol class="breadcrumb">
            <li class="breadcrumb-item">
                <a href="@Url.Action(GlobalConst.Index, GlobalConst.Home, new { Area = GlobalConst.General })"><i class="fa fa-home"></i></a>
            </li>
            <li class="breadcrumb-item">
                Archive Active
            </li>
            <li class="active breadcrumb-item">
                <strong>Pemindahan Arsip</strong>
            </li>
        </ol>
    </div>
    <div class="col-lg-2">
    </div>
</div>
<div class="wrapper wrapper-content animated fadeInRight pb-0">
    <div class="row">
        <div class="col-lg-12">
            <div class="ibox ">
                <div class="ibox-title">
                    <h4>Pencarian</h4>
                    <div class="ibox-tools">
                        <a class="collapse-link">
                            <i class="fa fa-chevron-up"></i>
                        </a>
                    </div>
                </div>
                <div class="ibox-content">
                    <div class="row">
                        <div class="col-sm-6 b-r">
                            <div class="form-group row rowreport">
                                <label class="col-lg-3 col-form-label">Judul Arsip</label>
                                <div class="col-lg-9">
                                    <input type="text" id="txtTitle" class="form-control" placeholder="Judul Arsip" />
                                </div>
                            </div>
                            <div class="form-group row rowreport">
                                <label class="col-lg-3 col-form-label">Pencipta Arsip</label>
                                <div class="col-lg-9">
                                    <select id="txtCreatorId" class="form-control" asp-items="ViewBag.ListArchiveCreator" data-placeholder="-- Semua --"><option value=""></option></select>
                                </div>
                            </div>
                            <div class="form-group row rowreport">
                                <label class="col-lg-3 col-form-label">Tahun</label>
                                <div class="col-lg-9">
                                    <select id="txtYear" class="select2_demo_1 form-control"
                                            data-placeholder="-- Semua --">
                                        <option value=""></option>
                                        @for (int i = 0; i > -30; i--)
                                        {
                                            <option value="@DateTime.Now.AddYears(i).ToString("yyyy")">@DateTime.Now.AddYears(i).ToString("yyyy")</option>
                                        }
                                    </select>
                                </div>
                            </div>
                            <div class="form-group row rowreport">
                                <label class="col-lg-3 col-form-label">Klasifikasi</label>
                                <div class="col-lg-9">
                                    <select id="txtClassificationId" class="form-control" asp-items="ViewBag.ListClassification" data-placeholder="-- Semua --"><option value=""></option></select>
                                </div>
                            </div>
                            <div class="form-group row rowreport">
                                <label class="col-lg-3 col-form-label">Subjek Klasifikasi</label>
                                <div class="col-lg-9">
                                    <select id="txtSubjectClassificationId" class="form-control" asp-items="ViewBag.ListSubjectClassification" data-placeholder="-- Semua --"><option value=""></option></select>
                                </div>
                            </div>
                        </div>
                        <div class="col-sm-6">
                            <div class="form-group row rowreport">
                                <label class="col-lg-3 col-form-label">Lokasi Kearsipan</label>
                                <div class="col-lg-9">
                                    <select id="txtArchiveUnitId" class="form-control" asp-items="ViewBag.ListArchiveUnit" data-placeholder="-- Semua --"><option value=""></option></select>
                                </div>
                            </div>
                            <div class="form-group row rowreport">
                                <label class="col-lg-3 col-form-label">Lantai</label>
                                <div class="col-lg-9">
                                    <select id="txtFloorId" class="form-control" asp-items="ViewBag.ListFloor" data-placeholder="-- Semua --"><option value=""></option></select>
                                </div>
                            </div>
                            <div class="form-group row rowreport">
                                <label class="col-lg-3 col-form-label">Ruangan</label>
                                <div class="col-lg-9">
                                    <select id="txtRoomId" class="form-control" asp-items="ViewBag.ListRoom" data-placeholder="-- Semua --"><option value=""></option></select>
                                </div>
                            </div>
                            <div class="form-group row rowreport">
                                <label class="col-lg-3 col-form-label">Rak</label>
                                <div class="col-lg-9">
                                    <select id="txtRackId" class="form-control" asp-items="ViewBag.ListRack" data-placeholder="-- Semua --"><option value=""></option></select>
                                </div>
                            </div>
                            <div class="form-group row rowreport">
                                <label class="col-lg-3 col-form-label">Tingkat</label>
                                <div class="col-lg-9">
                                    <select id="txtLevelId" class="form-control" asp-items="ViewBag.ListLevel" data-placeholder="-- Semua --"><option value=""></option></select>
                                </div>
                            </div>
                            <div class="form-group row rowreport">
                                <label class="col-lg-3 col-form-label">Baris</label>
                                <div class="col-lg-9">
                                    <select id="txtRowId" class="form-control" asp-items="ViewBag.ListRow" data-placeholder="-- Semua --"><option value=""></option></select>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-sm-12">
                            <div class="form-group mb-0">
                                <button class="btn btn-sm btn-success pull-right" id="btnSearch"><i class="fa fa-filter"></i> Cari</button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<div class="wrapper wrapper-content animated fadeInRight">
    <div class="row">
        <div class="col-lg-12">
            <div class="ibox ">
                <div class="ibox-title">
                    <h5>Pemindahan Arsip</h5>
                    <div class="ibox-tools">
                        <a href="@Url.Action(GlobalConst.Add, GlobalConst.ArchiveMovement, new { Area = GlobalConst.ArchiveActive})" class="btn btn-sm btn-primary"><i class="fa fa-pencil"></i><span class="bold"> New</span></a>
                    </div>
                </div>
                <div class="ibox-content">
                    <table id="tbl" class="table table-striped table-hover dataTables-example" style="width:100%">
                        <thead>
                            <tr>
                                <th>No</th>
                                <th>Action</th>
                                <th>Jenis Sirkulasi Arsip</th>
                                <th>Nomor Berita Acara</th>
                                <th>Nomor registrasi</th>
                                <th>Nama Pemindahan</th>
                                <th>Status</th>
                                <th>Note</th>
                            </tr>
                        </thead>
                        <tbody></tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
@section Scripts {
    <script type="text/javascript">
        function initDropdown() {
            initGlobalDropdown($('#txtArchiveUnitId'), '@Url.Action(GlobalConst.BindArchiveUnitsByCompanyIdAndParam, GlobalConst.Archive, new { Area = GlobalConst.ArchiveActive })', $('#txtCompanyId'));

            initGlobalDropdown($('#txtFloorId'), '@Url.Action(GlobalConst.BindParamFloorsByArchiveUnitId, GlobalConst.Archive, new { Area = GlobalConst.ArchiveActive })', $('#txtArchiveUnitId'));

            initGlobalDropdown($('#txtRoomId'), '@Url.Action(GlobalConst.BindParamRoomActiveByFloorId, GlobalConst.Archive, new { Area = GlobalConst.ArchiveActive })', $('#txtFloorId'));

            initGlobalDropdown($('#txtRackId'), '@Url.Action(GlobalConst.BindParamRackByRoomId, GlobalConst.Archive, new { Area = GlobalConst.ArchiveActive })', $('#txtRoomId'));

            initGlobalDropdown($('#txtLevelId'), '@Url.Action(GlobalConst.BindParamLevelByRackId, GlobalConst.Archive, new { Area = GlobalConst.ArchiveActive })', $('#txtRackId'));

            initGlobalDropdown($('#txtRowId'), '@Url.Action(GlobalConst.BindParamRowByLevelId, GlobalConst.Archive, new { Area = GlobalConst.ArchiveActive })', $('#txtLevelId'));

            initGlobalDropdown($('#txtCreatorId'), '@Url.Action(GlobalConst.BindParamCreatorByArchiveUnitId, GlobalConst.Archive, new { Area = GlobalConst.ArchiveActive })', $('#txtArchiveUnitId'));

            initGlobalDropdown($('#txtSubjectClassificationId'), '@Url.Action(GlobalConst.BindParamClassificationSubjectIdByClassificationId, GlobalConst.Archive, new { Area = GlobalConst.ArchiveActive })', $('#txtClassificationId'));
        }
        $(document).ready(function () {
            initDropdown();
            bsCustomFileInput.init();
            var table = $('#tbl').DataTable({
                processing: true,
                serverSide: true,
                scrollX: true,
                filter: true,
                ajax: {
                    "url": '@Url.Action(GlobalConst.GetData, GlobalConst.ArchiveCirculation, new { Area = GlobalConst.ArchiveActive })',
                    "type": "POST",
                    "datatype": "json",
                    //"complete": function (xhr, responseText) {
                    //    console.log(xhr);
                    //    console.log(responseText); //*** responseJSON: Array[0]
                    //}
                },
                columnDefs: [
                    { width: 50, targets: 0 },
                    { width: 100, targets: 4 }
                ],
                fixedColumns: true,
                order: [[0, 'desc']],
                columns: [
                    {
                        "data": "id", "name": "createdDate", "orderable": false, "searchable": false, "render": function (data, type, row, meta) {
                            //console.log(row);
                            return meta.row + meta.settings._iDisplayStart + 1;
                        }
                    },
                    {
                        "data": "id", "name": "id", "orderable": false, "searchable": false,
                        "render": function (data, type, row, meta) {
                            var url = '@Url.Action(GlobalConst.Detail, GlobalConst.ArchiveMovement, new { Area = GlobalConst.ArchiveActive, Id = -1 })';
                            if(row.type == '@GlobalConst.ArsipPemusnahan'){
                                url = '@Url.Action(GlobalConst.Detail, GlobalConst.ArchiveDestroy, new { Area = GlobalConst.ArchiveActive, Id = -1 })';
                            }
                            url = url.replace("-1", data);

                            var detail = `<a class="btn btn-sm btn-warning" href="${url}"><i class="fa fa-eye"></i> </a>`;

                            url = url.replace('@GlobalConst.Detail', '@GlobalConst.Update');
                            var edit = row.statusId == @((int)GlobalConst.STATUS.Rejected) || row.statusId == @((int)GlobalConst.STATUS.ApprovalProcess) || row.statusId == @((int)GlobalConst.STATUS.Approved) || row.statusId == @((int)GlobalConst.STATUS.UsulMusnah) || row.statusId == @((int)GlobalConst.STATUS.Musnah) ? '' : `<a class="btn btn-sm btn-primary" href="${url}"><i class="fa fa-pencil"></i> </a>`;

                            url = url.replace('@GlobalConst.Update', '@GlobalConst.Remove');
                            var remove = row.statusId == @((int)GlobalConst.STATUS.Rejected) || row.statusId == @((int)GlobalConst.STATUS.ApprovalProcess) || row.statusId == @((int)GlobalConst.STATUS.Approved) || row.statusId == @((int)GlobalConst.STATUS.UsulMusnah) || row.statusId == @((int)GlobalConst.STATUS.Musnah) ? '' : `<a class="btn btn-sm btn-danger" href="${url}"><i class="fa fa-trash"></i> </a>`;

                            url = url.replace('@GlobalConst.Remove', '@GlobalConst.Preview');
                            var submit = row.statusId == @((int)GlobalConst.STATUS.Rejected) || row.statusId == @((int)GlobalConst.STATUS.ApprovalProcess) || row.statusId == @((int)GlobalConst.STATUS.Approved) || row.statusId == @((int)GlobalConst.STATUS.UsulMusnah) || row.statusId == @((int)GlobalConst.STATUS.Musnah) ? '' : `<a class="btn btn-sm btn-success" href="${url}"><i class="fa fa-paper-plane"></i> </a>`;

                            var download = '';
                           
                            var musnah = '';

                            if (row.type == '@GlobalConst.ArsipPemusnahan') {
                                url = url.replace('@GlobalConst.Preview', '@GlobalConst.DownloadFile');
                                download = row.statusId != @((int)GlobalConst.STATUS.UsulMusnah) && row.statusId != @((int)GlobalConst.STATUS.Musnah) ? '' : `<a class="btn btn-sm btn-info" href="${url}"><i class="fa fa-download"></i> </a>`;

                                url = url.replace('@GlobalConst.DownloadFile', '@GlobalConst.Destroy');
                                musnah = row.statusId != @((int)GlobalConst.STATUS.UsulMusnah) ? '' : `<a class="btn btn-sm btn-info" href="${url}"><i class="fa fa-paper-plane"></i> </a>`;

                            }

                            if (row.type == '@GlobalConst.ArsipPemindahan') {
                                url = url.replace('@GlobalConst.Preview', '@GlobalConst.DownloadFile');
                                download = row.statusReceived != @((int)GlobalConst.STATUS.ArchiveReceived) ? '' : `<a class="btn btn-sm btn-info" href="${url}"><i class="fa fa-download"></i> </a>`;
                            }

                            var JoinButton = '<div style="width:100px"></div>' + edit.concat(" ", detail).concat(" ", remove).concat(" ", submit).concat(" ", download).concat(" ", musnah);
                            return JoinButton;
                        }
                    },
                    { "data": "type", "name": "type", "autoWidth": true, "orderable": false },
                    { "data": "documentCode", "name": "documentCode", "autoWidth": true },
                    { "data": "code", "name": "code", "autoWidth": true },
                    { "data": "name", "name": "name", "autoWidth": true },
                    {
                        "data": "status", "name": "status.name", "autoWidth": true, "render": function (data, type, row, meta) {
                            return `<span class="badge badge-pill center ${row.color}">${data}</span>`;
                        }
                    },
                    { "data": "note", "name": "note", "autoWidth": true },
                ]
            });

            var defaultSearch = '1=1';

            $('#btnSearch').on('click', function () {
                var searchMove = '';
                var SearchDestroy = '';

                var and = ' && ';
                var title = $('#txtTitle').val() == '' ? '1=1' : `TrxArchiveMovementDetails.Any(x => x.Archive.TitleArchive.Contains(\"${$('#txtTitle').val()}\"))`;
                var creator = $('#txtCreatorId').val() == '' ? '1=1' : `TrxArchiveMovementDetails.Any(x => x.Archive.CreatorId == \"${$('#txtCreatorId').val()}\")`;
                var year = $('#txtYear').val() == '' ? '1=1' : `TrxArchiveMovementDetails.Any(x => x.Archive.ArchiveYear.Contains(\"${$('#txtYear').val()}\"))`;
                var classification = $('#txtClassificationId').val() == '' ? '1=1' : `TrxArchiveMovementDetails.Any(x => x.Archive.SubSubjectClassification.SubjectClassification.ClassificationId == \"${$('#txtClassificationId').val()}\")`;
                var subclassification = $('#txtSubjectClassificationId').val() == '' ? '1=1' : `TrxArchiveMovementDetails.Any(x => x.Archive.SubSubjectClassification.SubjectClassificationId == \"${$('#txtSubjectClassificationId').val()}\")`;
                var archiveUnit = $('#txtArchiveUnitId').val() == '' ? '1=1' : `ArchiveUnitIdFrom == \"${$('#txtArchiveUnitId').val()}\"`;
                var floor = $('#txtFloorId').val() == '' ? '1=1' : `TrxArchiveMovementDetails.Any(x => x.Archive.TrxMediaStorageDetails.FirstOrDefault().MediaStorage.Row.Level.Rack.Room.FloorId == \"${$('#txtFloorId').val()}\")`;
                var room = $('#txtRoomId').val() == '' ? '1=1' : `TrxArchiveMovementDetails.Any(x => x.Archive.TrxMediaStorageDetails.FirstOrDefault().MediaStorage.Row.Level.Rack.RoomId == \"${$('#txtRoomId').val()}\")`;
                var rack = $('#txtRackId').val() == '' ? '1=1' : `TrxArchiveMovementDetails.Any(x => x.Archive.TrxMediaStorageDetails.FirstOrDefault().MediaStorage.Row.Level.RackId == \"${$('#txtRackId').val()}\")`;
                var level = $('#txtLevelId').val() == '' ? '1=1' : `TrxArchiveMovementDetails.Any(x => x.Archive.TrxMediaStorageDetails.FirstOrDefault().MediaStorage.Row.LevelId == \"${$('#txtLevelId').val()}\")`;
                var row = $('#txtRowId').val() == '' ? '1=1' : `TrxArchiveMovementDetails.Any(x => x.Archive.TrxMediaStorageDetails.FirstOrDefault().MediaStorage.RowId == \"${$('#txtRowId').val()}\")`;
                var search = `${defaultSearch}${and}${title}${and}${creator}${and}${year}${and}${classification}${and}${subclassification}${and}${archiveUnit}${and}${floor}${and}${room}${and}${rack}${and}${level}${and}${row}`;

                searchMove = search;

                title = $('#txtTitle').val() == '' ? '1=1' : `TrxArchiveDestroyDetails.Any(x => x.Archive.TitleArchive.Contains(\"${$('#txtTitle').val()}\"))`;
                creator = $('#txtCreatorId').val() == '' ? '1=1' : `TrxArchiveDestroyDetails.Any(x => x.Archive.CreatorId == \"${$('#txtCreatorId').val()}\")`;
                year = $('#txtYear').val() == '' ? '1=1' : `TrxArchiveDestroyDetails.Any(x => x.Archive.ArchiveYear.Contains(\"${$('#txtYear').val()}\"))`;
                classification = $('#txtClassificationId').val() == '' ? '1=1' : `TrxArchiveDestroyDetails.Any(x => x.Archive.SubSubjectClassification.SubjectClassification.ClassificationId == \"${$('#txtClassificationId').val()}\")`;
                subclassification = $('#txtSubjectClassificationId').val() == '' ? '1=1' : `TrxArchiveDestroyDetails.Any(x => x.Archive.SubSubjectClassification.SubjectClassificationId == \"${$('#txtSubjectClassificationId').val()}\")`;
                archiveUnit = $('#txtArchiveUnitId').val() == '' ? '1=1' : `ArchiveUnitId == \"${$('#txtArchiveUnitId').val()}\"`;
                floor = $('#txtFloorId').val() == '' ? '1=1' : `TrxArchiveDestroyDetails.Any(x => x.Archive.TrxMediaStorageDetails.FirstOrDefault().MediaStorage.Row.Level.Rack.Room.FloorId == \"${$('#txtFloorId').val()}\")`;
                room = $('#txtRoomId').val() == '' ? '1=1' : `TrxArchiveDestroyDetails.Any(x => x.Archive.TrxMediaStorageDetails.FirstOrDefault().MediaStorage.Row.Level.Rack.RoomId == \"${$('#txtRoomId').val()}\")`;
                rack = $('#txtRackId').val() == '' ? '1=1' : `TrxArchiveDestroyDetails.Any(x => x.Archive.TrxMediaStorageDetails.FirstOrDefault().MediaStorage.Row.Level.RackId == \"${$('#txtRackId').val()}\")`;
                level = $('#txtLevelId').val() == '' ? '1=1' : `TrxArchiveDestroyDetails.Any(x => x.Archive.TrxMediaStorageDetails.FirstOrDefault().MediaStorage.Row.LevelId == \"${$('#txtLevelId').val()}\")`;
                row = $('#txtRowId').val() == '' ? '1=1' : `TrxArchiveDestroyDetails.Any(x => x.Archive.TrxMediaStorageDetails.FirstOrDefault().MediaStorage.RowId == \"${$('#txtRowId').val()}\")`;
                search = `${defaultSearch}${and}${title}${and}${creator}${and}${year}${and}${classification}${and}${subclassification}${and}${archiveUnit}${and}${floor}${and}${room}${and}${rack}${and}${level}${and}${row}`;

                SearchDestroy = search;

                table
                    //.column(0).search($('#txtStartDate').val())
                    //.column(1).search($('#txtEndDate').val())
                    .column(2).search(searchMove)
                    .column(3).search(SearchDestroy)
                    .draw();
            });
        });
    </script>
}