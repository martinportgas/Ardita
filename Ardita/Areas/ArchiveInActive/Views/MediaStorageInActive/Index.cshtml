@using Ardita.Extensions;
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="row wrapper border-bottom white-bg page-heading">
    <div class="col-lg-10">
        <h2>Pemindahan Arsip</h2>
        <ol class="breadcrumb">
            <li class="breadcrumb-item">
                <a href="@Url.Action(GlobalConst.Index, GlobalConst.Home, new { Area = GlobalConst.General })"><i class="fa fa-home"></i></a>
            </li>
            <li class="breadcrumb-item">
                Archive Active
            </li>
            <li class="active breadcrumb-item">
                <strong>Pemindahan Arsip</strong>
            </li>
        </ol>
    </div>
    <div class="col-lg-2">
    </div>
</div>
<div class="wrapper wrapper-content animated fadeInRight">
    <div class="row">
        <div class="col-lg-12">
            <div class="ibox ">
                <div class="ibox-title">
                    <h5>Pemindahan Arsip</h5>
                    <div class="ibox-tools">
                        <a href="@Url.Action(GlobalConst.Add, GlobalConst.MediaStorageInActive, new { Area = GlobalConst.ArchiveInActive})" class="btn btn-sm btn-primary"><i class="fa fa-pencil"></i><span class="bold"> New</span></a>
                    </div>
                </div>
                <div class="ibox-content">
                    <table id="tbl" class="table table-striped table-hover dataTables-example" style="width:100%">
                        <thead>
                            <tr>
                                <th>No</th>
                                <th>Action</th>
                                <th>Kode Media Penyimpanan</th>
                                <th>Lokasi</th>
                                <th>Jenis Penyimpanan</th>
                                <th>Sub Subjek Klasifikasi</th>
                                <th>Unit Pencipta</th>
                                <th>Tahun</th>
                                <th>Status</th>
                            </tr>
                        </thead>
                        <tbody></tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
@section Scripts {
    <script type="text/javascript">

        $(document).ready(function () {
            bsCustomFileInput.init();
            var table = $('#tbl').DataTable({
                processing: true,
                serverSide: true,
                scrollX: true,
                filter: true,
                ajax: {
                    "url": '@Url.Action(GlobalConst.GetData, GlobalConst.MediaStorageInActive, new { Area = GlobalConst.ArchiveInActive })',
                    "type": "POST",
                    "datatype": "json"
                },
                columnDefs: [
                    { width: 50, targets: 0 },
                    { width: 100, targets: 1 }
                ],
                fixedColumns: true,
                order: [[0, 'desc']],
                columns: [
                    {
                        "data": "mediaStorageInActiveId", "orderable": false, "searchable": false, "render": function (data, type, row, meta) {
                            return meta.row + meta.settings._iDisplayStart + 1;
                        }
                    },
                    {
                        "data": "mediaStorageInActiveId",
                        "render": function (data, type, row, meta) {
                            var detail = `<a class="btn btn-sm btn-warning" href="@Url.Action(GlobalConst.Detail, GlobalConst.MediaStorageInActive, new { Area = GlobalConst.ArchiveInActive, Id = -1 })"><i class="fa fa-eye"></i> </a>`;
                            detail = detail.replace("-1", row.mediaStorageInActiveId);

                            var edit = row.status === 'Draft' ? `<a class="btn btn-sm btn-primary" href="@Url.Action(GlobalConst.Update, GlobalConst.MediaStorageInActive, new { Area = GlobalConst.ArchiveInActive, Id = -1 })"><i class="fa fa-pencil"></i> </a>` : "";
                            edit = edit.replace("-1", row.mediaStorageInActiveId);

                            var remove = row.status === 'Draft' ? `<a class="btn btn-sm btn-danger" href="@Url.Action(GlobalConst.Remove, GlobalConst.MediaStorageInActive, new { Area = GlobalConst.ArchiveInActive, Id = -1 })"><i class="fa fa-trash"></i> </a>` : "";
                            remove = remove.replace("-1", row.mediaStorageInActiveId);

                            var download = row.statusId == @((int)GlobalConst.STATUS.Draft) ? '' : `<a class="btn btn-sm btn-info" href="@Url.Action(GlobalConst.DownloadFile, GlobalConst.MediaStorageInActive, new { Area = GlobalConst.ArchiveInActive, Id = -1 })"><i class="fa fa-download"></i> </a>`;
                            download = download.replace("-1", data);

                            var JoinButton = edit.concat(" ", detail).concat(" ", remove).concat(" ", download);
                            return JoinButton;
                        }
                    },
                    { "data": "mediaStorageInActiveCode", "Code": "mediaStorageInActiveCode", "autoWidth": true },
                    { "data": "archiveUnitName", "Code": "typeStorage.archiveUnit.archiveUnitName", "autoWidth": true },
                    { "data": "typeStorageName", "Code": "typeStorage.typeStorageName", "autoWidth": true },
                    { "data": "subSubjectClassificationName", "Code": "subSubjectClassification.subSubjectClassificationName", "autoWidth": true },
                    { "data": "creatorName", "Code": "subSubjectClassification.creator.creatorName", "autoWidth": true },
                    { "data": "archiveYear", "Code": "archiveYear", "autoWidth": true },
                    {
                        "data": "status.name", "name": "extendName", "autoWidth": true, "render": function (data, type, row, meta) {
                            return `<span class="badge badge-pill ${row.color}" style="width:100%">${row.status}</span>`;
                        }
                    },
                ]
            });
        });
    </script>
}