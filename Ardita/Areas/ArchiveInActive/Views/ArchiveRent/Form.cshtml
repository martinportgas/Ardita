@section Scripts {
    <script type="text/javascript">
        
        $(document).ready(function () {
            initDropdown();
            //$('.rentHistory').hide();
            $('.divNameSelect').hide();
            $('#borrowerNameSelect').select2({
                width: 'resolve'
            });
            $("#borrowerNameSelect").change(function () {
                initTableHistory();
            });
            $('#btnRequestPinjamMdl').hide();

            $('#search-archive').click(function (e) {
                initTable();

            });
            $('#btnRequestPinjamMdl').click(function (e) {

                var archiveId = $('#txtArchiveId').val();
                $.ajax({
                    'url': '@Url.Action(GlobalConst.GetDetailArchive, GlobalConst.ArchiveRent, new { Area = GlobalConst.ArchiveInActive })',
                    'method': "GET",
                    'contentType': 'application/json',
                    'data': { "id": archiveId }
                }).done(function (data) {

                    var classificationData = $('#txtSubSubjectClassificationId').select2('data');
                    var classification = classificationData[0].text;

                    var archiveData = $('#txtArchiveId').select2('data');
                    var archive = archiveData[0].text;

                    $('#txtMdlClassification').val(classification);
                    $('#txtMdlArchiveId').val(archiveData[0].id);
                    $('#txtMdlTitleArchive').val(archive);
                    $('#txtMdlCreatorName').val(data[0].creator.creatorName);
                    $('#txtMdlArchiveUnit').val(data[0].creator.archiveUnit.archiveUnitName);
                });

                $('#frmRequest').modal('show');
            });
            $('#txtMdlRequestedDate').focusout(function () {
                var newDateOptions = {
                    year: "numeric",
                    month: "2-digit",
                    day: "2-digit"
                }

                var requestedDate = new Date($('#txtMdlRequestedDate').val());
                requestedDate.setDate(requestedDate.getDate() + 7);
                $('#txtMdlRequestedReturnDate').val(requestedDate.toLocaleDateString("en-US", newDateOptions));
            });

            $('input[type=radio]').change(function () {
                var formType = $(this).val();

                if(formType == "Baru"){
                    $('.divNameSelect').hide();
                    $('.divNameText').show();
                    //$('.rentHistory').hide();
                    $('#borrowerNameSelect').val('').trigger('change');

                    $('#borrowerCompany').val('');
                    $('#borrowerArchiveUnit').val('');
                    $('#borrowerPosition').val('');
                    $('#borrowerIdentityId').val('');
                    $('#borrowerPhone').val('');
                    $('#borrowerEmail').val('');
                }else{
                    $('.divNameSelect').show();
                    $('.divNameText').hide();
                }
            });

        });

        function initDropdown() {
            $('#txtSubjectClassificationId').on('change', function () {
                $('#txtSubSubjectClassificationId').val('').trigger('change');
            });

            $('#txtSubSubjectClassificationId').select2({
                theme: 'bootstrap4',
                allowClear: true,
                placeholder: '-- Pilih Sub Subjek Klasifikasi --',
                ajax: {
                    url: '@Url.Action(GlobalConst.BindSubSubjectClassificationByClassificationId, GlobalConst.ArchiveRent, new { Area = GlobalConst.ArchiveInActive })',
                    type: "POST",
                    data: function (params) {
                        var query = {
                            id: $('#txtSubjectClassificationId').val(),
                            param: params.term
                        }
                        return query;
                    },
                    processResults: function (data) {
                        var dataResult = $.map(data, function (item) {
                            return {
                                text: item.subSubjectClassificationName,
                                id: item.subSubjectClassificationId
                            }
                        });
                        return {
                            results: dataResult
                        };
                    }
                }
            });

            $('#txtArchiveId').select2({
                theme: 'bootstrap4',
                allowClear: true,
                placeholder: '-- Select Archive --',
                ajax: {
                    url: '@Url.Action(GlobalConst.BindArchivesInActiveBySubSubjectClassificationId, GlobalConst.ArchiveRent, new { Area = GlobalConst.ArchiveInActive })',
                    type: "POST",
                    data: function (params) {
                        var query = {
                            id: $('#txtSubSubjectClassificationId').val(),
                        }
                        return query;
                    },
                    processResults: function (data) {
                        var dataResult = $.map(data, function (item) {
                            return {
                                text: item.titleArchive,
                                id: item.archiveId
                            }
                        });
                        return {
                            results: dataResult
                        };
                    }
                }
            });


        }

        function initTable() {
            var archiveId = $('#txtArchiveId').val();
            $.ajax({
                'url': '@Url.Action(GlobalConst.GetDetail, GlobalConst.ArchiveRent, new { Area = GlobalConst.ArchiveInActive })',
                'method': "GET",
                'contentType': 'application/json',
                'data': { "id": archiveId }
            }).done(function (data) {
                if (data.length > 0) {
                    $('#btnRequestPinjamMdl').show();
                } else {
                    $('#btnRequestPinjamMdl').hide();
                }

                $('#tbl').DataTable({
                    "data": data,
                    "destroy": true,
                    "searching": false,
                    "paging": false,
                    "info": false,
                    "columns": [
                        { "data": "mediaStorageInActiveCode" },
                        { "data": "sort" },
                        { "data": "storageName" },
                        { "data": "classificationName" },
                        { "data": "titleArchive" },
                        { "data": "creatorName" },
                        { "data": "archiveUnit" },
                        {
                            "data": "statusName", "orderable": false, "searchable": false, "render": function (data, type, row, meta) {
                                return `<span class='badge badge-pill badge-primary status-class'>${data}</span>`;
                            }
                        },
                        { "data": "requestedDate" },
                        { "data": "requestedReturnDate" }
                    ]
                });

                checkValidate();
            })
        }

        function initTableHistory() {
            var borrowerId = $('#borrowerNameSelect').val();
            $.ajax({
                'url': '@Url.Action(GlobalConst.GetDataHistory, GlobalConst.ArchiveRent, new { Area = GlobalConst.ArchiveInActive })',
                'method': "GET",
                'contentType': 'application/json',
                'data': { "id": borrowerId }
            }).done(function (data) {
                if (data.length > 0) {
                    //$('.rentHistory').show();

                    $('#borrowerCompany').val(data[0].borrowerCompany);
                    $('#borrowerArchiveUnit').val(data[0].borrowerArchiveUnit);
                    $('#borrowerPosition').val(data[0].borrowerPosition);
                    $('#borrowerIdentityId').val(data[0].borrowerIdentityNumber);
                    $('#borrowerPhone').val(data[0].borrowerPhone);
                    $('#borrowerEmail').val(data[0].borrowerEmail);

                    $('#tblHistory').DataTable({
                        "data": data,
                        "destroy": true,
                        "searching": false,
                        "paging": false,
                        "info": false,
                        "columns": [
                            { "data": "archiveCode" },
                            { "data": "archiveTitle" },
                            { "data": "creatorName" },
                            { "data": "rentDate" },
                            { "data": "returnDate" },
                            { "data": "status" }
                        ]
                    });
                } else {
                    //$('.rentHistory').hide();

                    $('#borrowerCompany').val('');
                    $('#borrowerArchiveUnit').val('');
                    $('#borrowerPosition').val('');
                    $('#borrowerIdentityId').val('');
                    $('#borrowerPhone').val('');
                    $('#borrowerEmail').val('');
                }
            })
        }

        function checkValidate() {
            var oTable = $('#tbl').dataTable();
            var rowcollection = oTable.$(".status-class");
            var allChecked = false;

            rowcollection.each(function (index, elem) {
                console.log($(elem).html());
                if ($(elem).html() != 'Available') {
                    allChecked = false;
                    return false;
                }
                else {
                    allChecked = true;
                }
            });

            if (allChecked)
                $('#btnRequestPinjamMdl').show();
            else
                $('#btnRequestPinjamMdl').hide();

        }
    </script>
}