@using Ardita.Extensions;
@using Ardita.Models.ViewModels;
@model Ardita.Models.DbModels.TrxArchiveRent;
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    Layout = GlobalConst.ViewStart;
    FormModel form = Html.Form();

}

<div class="row wrapper border-bottom white-bg page-heading">
    <div class="col-lg-10">
        <h2>Media Storage In Active</h2>
        <ol class="breadcrumb">
            <li class="breadcrumb-item">
                <a href="@Url.Action(GlobalConst.Index, GlobalConst.Home, new {Area = GlobalConst.General})"><i class="fa fa-home"></i></a>
            </li>
            <li class="breadcrumb-item">
                Archive Active
            </li>
            <li class="breadcrumb-item">
                <a href="@Url.Action(GlobalConst.Index, GlobalConst.ArchiveRent, new {Area = GlobalConst.ArchiveInActive})">Archive Rent</a>
            </li>
            <li class="active breadcrumb-item">
                <strong>@form.LastBreadcrumb</strong>
            </li>
        </ol>
    </div>
    <div class="col-lg-2">
    </div>
</div>

<div class="wrapper wrapper-content animated fadeInRight">
    <div class="row">
        <div class="col-lg-12">
            <div class="ibox">
                <div class="ibox-title">
                    <h5>Page</h5>
                    <div class="ibox-tools">
                        <a class="collapse-link">
                            <i class="fa fa-chevron-up"></i>
                        </a>
                        <a class="dropdown-toggle" data-toggle="dropdown" href="form_basic.html#">
                            <i class="fa fa-wrench"></i>
                        </a>
                        <ul class="dropdown-menu dropdown-user">
                            <li>
                                <a href="form_basic.html#" class="dropdown-item">Config option 1</a>
                            </li>
                            <li>
                                <a href="form_basic.html#" class="dropdown-item">Config option 2</a>
                            </li>
                        </ul>
                        <a class="close-link">
                            <i class="fa fa-times"></i>
                        </a>
                    </div>
                </div>
                <div class="ibox-content">
                    <div class="row">
                        <div class="col-sm-12">
                            <div class="row">
                                <div class="col-sm-6 b-r">

                                    <div class="profile-image">
                                        <img src="~/img/default-user.png" class="rounded-circle circle-border m-b-md" alt="profile">
                                    </div>
                                    <div class="profile-info">
                                        <div class="">
                                            <div>
                                                <h2 class="no-margins">
                                                    Ripan Amminudin
                                                </h2>
                                                <h5>Unit Pengelola</h5>
                                                <h5>123456</h5>
                                                <h5>ripan@bks.co.id</h5>
                                                <h5>PT. Bringin Karya Sejahtera</h5>
                                                <h5>0821766666</h5>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-sm-6"></div>
                            </div>
                        </div>
                        
                        <div class="col-sm-12">
                            <div class="row">
                                
                                    <div class="col-sm-6 border-top mt-2 mb-1 b-r">
                                        <div class="form-group">
                                            <label>Sub Subject Classifications</label>
                                            <select asp-items="ViewBag.listSubSubject" (form.isInput ? GlobalConst.Required : GlobalConst.Disabled)
                                                    id="txtSubSubjectClassificationId" class="select2_demo_1 form-control"
                                                    data-placeholder="-- Select Sub Subject Classification --">
                                                <option value=""></option>
                                            </select>
                                        </div>
                                        <div class="form-group">
                                            <label>Archive</label>
                                            <select id="txtArchiveId"
                                                    class="select2_demo_1 form-control @Html.Raw(form.isInput ? GlobalConst.Required : GlobalConst.Disabled)"
                                                    asp-items="ViewBag.listArchive"
                                                    data-placeholder="-- Select Archive --">
                                                <option value=""></option>
                                            </select>
                                        </div>
                                        <div class="form-group">
                                       
                                            <button class="btn btn-success btn-sm pull-right mb-5"
                                                    type="button" id="search-archive">
                                                <i class="fa fa-search"></i> Search
                                            </button>
                                        </div>
                                    </div>
                               
                            </div>
                        </div>
                        <div class="col-sm-12">
                            <div class="row float-right">
                                <button class="btn btn-success btn-sm pull-right mb-5"
                                        type="button" id="btnRequestPinjamMdl">
                                    <i class="fa fa-pencil"></i> Request Pinjam
                                </button>
                            </div>
                        </div>
                       
                       <table id="tbl" class="table table-striped table-hover dataTables-example" style="width:100%">
                            <thead>
                                <tr>
                                    <th>Kode Media Penyimpanan</th>
                                    <th>Jenis Penyimpanan</th>
                                    <th>Klasifikasi</th>
                                    <th>Judul Arsip</th>
                                    <th>Pencipta</th>
                                    <th>Unit Kearsipan</th>
                                </tr>
                            </thead>
                            <tbody></tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
        <!--Modal-->
        <div class="modal inmodal" id="frmRequest" tabindex="-1" role="dialog" aria-hidden="true">
            <div class="modal-dialog modal-lg">
                <div class="modal-content animated fadeIn">
                    <form id="frmLevelUpload" method="post" enctype="multipart/form-data" asp-controller="@GlobalConst.ArchiveRent" asp-action="@GlobalConst.Save" asp-area="@GlobalConst.ArchiveInActive">
                        @Html.AntiForgeryToken();
                        <div class="modal-header">
                            <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
                            <h4 class="modal-title">Request Peminjaman</h4>
                        </div>
                        <div class="modal-body">
                            <div class="row">
                               <div class="col-sm-12">
                                   <div class="row">
                                       <div class="col-sm-6">
                                            <div class="form-group">
                                                <label>Klasifikasi</label>
                                                <input type="text" placeholder="" id="txtMdlClassification" name="txtMdlClassification" class="form-control" readonly>
                                            </div>
                                           
                                            <div class="form-group">
                                                <label>Pencipta</label>
                                                <input type="text" placeholder="" id="txtMdlCreatorName" name="txtMdlCreatorName" class="form-control" readonly>
                                            </div>
                                            <div class="form-group">
                                                <label>Tanggal Pinjam</label>
                                                <input type="date" placeholder="" id="txtMdlRequestedDate" name="txtMdlRequestedDate" class="form-control">
                                            </div>
                                            <div class="form-group">
                                                <label>Keterangan</label>
                                                <textarea class="form-control" id="txtMdlDescription" name="txtMdlDescription"></textarea>
                                            </div>
                                          
                                       </div>
                                       <div class="col-sm-6">
                                            
                                            <div class="form-group">
                                                <label>Judul</label>
                                                <input type="hidden" id="txtMdlArchiveId" name="txtMdlArchiveId" />
                                                <input type="text" placeholder="" id="txtMdlTitleArchive" class="form-control" readonly>
                                            </div>
                                           
                                            <div class="form-group">
                                                <label>Unit Kearsipan</label>
                                                <input type="text" placeholder="" id="txtMdlArchiveUnit" class="form-control" readonly>
                                            </div>
                                            <div class="form-group">
                                                <label>Tanggal Kembali</label>
                                                <input type="text" placeholder="" id="txtMdlRequestedReturnDate" name="txtMdlRequestedReturnDate" class="form-control" readonly>
                                            </div>
                                       </div>
                                   </div>
                                    
                               </div>
                            </div>
                            <br />

                        </div>
                        <div class="modal-footer">
                            <button id="btnRequest" type="submit" class="btn btn-sm btn-success"><i class="fa fa-pencil"></i><span class="bold"> Request Pinjam</span></button>
                            <button type="button" class="btn btn-white" data-dismiss="modal">Close</button>
                        </div>
                    </form>

                </div>
            </div>
        </div>
    </div>
</div>
@section Scripts {
    <script type="text/javascript">
        $(document).ready(function () {
            initDropdown();

            $('#btnRequestPinjamMdl').hide();

            $('#search-archive').click(function(e){
                initTable();
            });
            $('#btnRequestPinjamMdl').click(function (e) {

                var archiveId = $('#txtArchiveId').val();
                $.ajax({
                    'url': '@Url.Action(GlobalConst.GetDetailArchive, GlobalConst.ArchiveRent, new { Area = GlobalConst.ArchiveInActive })',
                    'method': "GET",
                    'contentType': 'application/json',
                    'data': { "id": archiveId }
                }).done(function (data) {

                    var classificationData = $('#txtSubSubjectClassificationId').select2('data');
                    var classification = classificationData[0].text;

                    var archiveData = $('#txtArchiveId').select2('data');
                    var archive = archiveData[0].text;

                    $('#txtMdlClassification').val(classification);
                    $('#txtMdlArchiveId').val(archiveData[0].id);
                    $('#txtMdlTitleArchive').val(archive);
                    $('#txtMdlCreatorName').val(data[0].creator.creatorName);
                    $('#txtMdlArchiveUnit').val(data[0].creator.archiveUnit.archiveUnitName);
                });

                $('#frmRequest').modal('show');
            });
            $('#txtMdlRequestedDate').focusout(function () {
                var newDateOptions = {
                    year: "numeric",
                    month: "2-digit",
                    day: "2-digit"
                }

                var requestedDate = new Date($('#txtMdlRequestedDate').val());
                requestedDate.setDate(requestedDate.getDate() + 7);
                $('#txtMdlRequestedReturnDate').val(requestedDate.toLocaleDateString("en-US", newDateOptions));
            });
           
        });

        function initDropdown(){
            $('#txtSubSubjectClassificationId').on('change', function () {
                $('#txtArchiveId').val('').trigger('change');
            });
          
            $('#txtArchiveId').select2({
                theme: 'bootstrap4',
                allowClear: true,
                placeholder: '-- Select Archive --',
                ajax: {
                    url: '@Url.Action(GlobalConst.BindArchivesBySubSubjectClassificationId, GlobalConst.MediaStorage, new { Area = GlobalConst.ArchiveActive })',
                    type: "POST",
                    data: function (params) {
                        var query = {
                            id: $('#txtSubSubjectClassificationId').val(),
                        }
                        return query;
                    },
                    processResults: function (data) {
                        var dataResult = $.map(data, function (item) {
                            return {
                                text: item.titleArchive,
                                id: item.archiveId
                            }
                        });
                        return {
                            results: dataResult
                        };
                    }
                }
            });

           
        }

        function initTable(){
            var archiveId = $('#txtArchiveId').val();
            $.ajax({
                'url': '@Url.Action(GlobalConst.GetDetail, GlobalConst.ArchiveRent, new { Area = GlobalConst.ArchiveInActive })',
                'method': "GET",
                'contentType': 'application/json',
                'data': { "id": archiveId }
            }).done(function (data) {
                if (data.length > 0) {
                    $('#btnRequestPinjamMdl').show();
                } else {
                    $('#btnRequestPinjamMdl').hide();
                }

                $('#tbl').DataTable({
                    "data": data,
                    "columns": [
                        { "data": "mediaStorageInActiveCode" },
                        { "data": "storageName" },
                        { "data": "classificationName" },
                        { "data": "titleArchive" },
                        { "data": "creatorName" },
                        { "data": "archiveUnitName" },
                    ]
                })
            })
        }
    </script>
}