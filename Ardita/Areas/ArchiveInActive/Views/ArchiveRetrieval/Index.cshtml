@using Ardita.Extensions;
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="row wrapper border-bottom white-bg page-heading">
    <div class="col-lg-10">
        <h2>Peminjaman Arsip</h2>
        <ol class="breadcrumb">
            <li class="breadcrumb-item">
                <a href="@Url.Action(GlobalConst.Index, GlobalConst.Home, new { Area = GlobalConst.General })"><i class="fa fa-home"></i></a>
            </li>
            <li class="breadcrumb-item">
                Archive In Active
            </li>
            <li class="active breadcrumb-item">
                <strong>Peminjaman Arsip</strong>
            </li>
        </ol>
    </div>
    <div class="col-lg-2">
    </div>
</div>
<div class="wrapper wrapper-content animated fadeInRight">
    <div class="row">
        <div class="col-lg-12">
            <div class="ibox ">
                <div class="ibox-title">
                    <h5>Peminjaman Arsip</h5>
                    <div class="ibox-tools">
                        <a href="@Url.Action(GlobalConst.Add, GlobalConst.ArchiveRent, new { Area = GlobalConst.ArchiveInActive})" class="btn btn-sm btn-primary"><i class="fa fa-pencil"></i><span class="bold"> New</span></a>
                    </div>
                </div>
                <div class="ibox-content">
                    <table id="tbl" class="table table-striped table-hover dataTables-example" style="width:100%">
                        <thead>
                            <tr>
                                <th>No</th>
                                <th>Action</th>
                                <th>Nama Peminjam</th>
                                <th>Tanggal Pinjam</th>
                                <th>Tanggal Kembali</th>
                                <th>Status</th>
                            </tr>
                        </thead>
                        <tbody></tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
@section Scripts {
    <script type="text/javascript">
        $(document).ready(function () {
            var table = $('#tbl').DataTable({
                processing: true,
                serverSide: true,
                scrollX: true,
                filter: true,
                ajax: {
                    "url": '@Url.Action(GlobalConst.GetData, GlobalConst.ArchiveRetrieval, new { Area = GlobalConst.ArchiveInActive })',
                    "type": "POST",
                    "datatype": "json",
                },
                columnDefs: [
                    { width: 50, targets: 0 },
                    { width: 100, targets: 4 }
                ],
                fixedColumns: true,
                order: [[0, 'desc']],
                columns: [
                    {
                        "data": "trxArchiveRentId", "name": "createdDate", "orderable": false, "searchable": false, "render": function (data, type, row, meta) {
                            return meta.row + meta.settings._iDisplayStart + 1;
                        }
                    },
                    {
                        "data": "trxArchiveRentId", "name": "trxArchiveRentId", "orderable": false, "searchable": false,
                        "render": function (data, type, row, meta) {
                            var detail = `<a class="btn btn-sm btn-warning" href="@Url.Action(GlobalConst.Detail, GlobalConst.ArchiveRent, new { Area = GlobalConst.ArchiveInActive, Id = -1 })"><i class="fa fa-eye"></i> </a>`;
                            detail = detail.replace("-1", data);
                            return detail;
                        }
                    },
                    { "data": "name", "name": "user.employee.name", "autoWidth": true },
                    { "data": "requestedDate", "name": "requestedDate", "autoWidth": true },
                    { "data": "requestedReturnDate", "name": "requestedReturnDate", "autoWidth": true },
                    {
                        "data": "status", "name": "status.name", "autoWidth": true, "render": function (data, type, row, meta) {
                            return `<span class="badge badge-pill center ${row.color}">${data}</span>`;
                        }
                    },
                ]
            });
        });
    </script>
}