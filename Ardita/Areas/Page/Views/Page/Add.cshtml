@model Ardita.Areas.Page.Models.PageInsertViewModel

@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row wrapper border-bottom white-bg page-heading">
    <div class="col-lg-10">
        <h2>Page</h2>
        <ol class="breadcrumb">
            <li class="breadcrumb-item">
                <a href="@Url.Action("Index", "Page", new {Area = "Page"})">Page</a>
            </li>
            <li class="active breadcrumb-item">
                <strong>Data</strong>
            </li>
        </ol>
    </div>
    <div class="col-lg-2">
    </div>
</div>
<div class="wrapper wrapper-content animated fadeInRight">
    <div class="row">
        <div class="col-lg-12">
            <div class="ibox ">
                <div class="ibox-title">
                    <h5>Role</h5>
                    <div class="ibox-tools">
                        <a class="collapse-link">
                            <i class="fa fa-chevron-up"></i>
                        </a>
                        <a class="dropdown-toggle" data-toggle="dropdown" href="form_basic.html#">
                            <i class="fa fa-wrench"></i>
                        </a>
                        <ul class="dropdown-menu dropdown-user">
                            <li>
                                <a href="form_basic.html#" class="dropdown-item">Config option 1</a>
                            </li>
                            <li>
                                <a href="form_basic.html#" class="dropdown-item">Config option 2</a>
                            </li>
                        </ul>
                        <a class="close-link">
                            <i class="fa fa-times"></i>
                        </a>
                    </div>
                </div>
                <div class="ibox-content">
                    <div class="row">
                        <div class="col-sm-6 b-r">
                            <form role="form" enctype="multipart/form-data" asp-controller="Page" asp-area="Page" asp-action="Save">
                                <div class="form-group">
                                    <div class="form-group">
                                        <label>Page Name</label>
                                        <input type="text" placeholder="" class="form-control" asp-for="page.Name">
                                    </div>
                                    <div class="form-group">
                                        <label>Page Path</label>
                                        <input type="text" placeholder="" class="form-control" asp-for="page.Path">
                                    </div>
                                    <div class="form-group">
                                        <label>Sub Menu</label>
                                        <select id="menuList" class="select2_demo_1 form-control" asp-items="Model.MenuTypes"></select>
                                    </div>
                                    <div class="form-group">
                                        <label>Sub Menu</label>
                                        <select id="subMenuList" class="select2_demo_1 form-control" asp-for="page.SubmenuId" asp-items="Model.subMenuTypes"></select>
                                    </div>
                                </div>
                                <div>
                                    <a href="@Url.Action("Index", "Page", new { Area = "Page" })" class="btn btn-sm btn-danger float-right m-t-n-xs">Cancel</a>
                                    <button class="btn btn-sm btn-primary float-right m-t-n-xs mr-1" type="submit">Submit</button>
                                    <label> <input type="checkbox" asp-for="page.IsActive" class="i-checks"> Is Active </label>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

</div>
@section Scripts {
    <script type="text/javascript">
        $(document).ready(function () {
            $("#subMenuList").select2({
                theme: 'bootstrap4',
            }); 
            $("#menuList").select2({
                theme: 'bootstrap4',
            });

            var mem = $('#employeeDateOfBirth .input-group.date').datepicker({
                todayBtn: "linked",
                keyboardNavigation: false,
                forceParse: false,
                calendarWeeks: true,
                autoclose: true
            });
        });


    </script>
}