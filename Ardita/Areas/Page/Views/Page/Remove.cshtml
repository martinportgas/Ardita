@model Ardita.Areas.Page.Models.PageInsertViewModel

@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row wrapper border-bottom white-bg page-heading">
    <div class="col-lg-10">
        <h2>Page</h2>
        <ol class="breadcrumb">
            <li class="breadcrumb-item">
                <a href="@Url.Action("Index", "Page", new {Area = "Page"})">Page</a>
            </li>
            <li class="active breadcrumb-item">
                <strong>Data</strong>
            </li>
        </ol>
    </div>
    <div class="col-lg-2">
    </div>
</div>
<div class="wrapper wrapper-content animated fadeInRight">
    <div class="row">
        <div class="col-lg-12">
            <div class="ibox ">
                <div class="ibox-title">
                    <h5>Role</h5>
                    <div class="ibox-tools">
                        <a class="collapse-link">
                            <i class="fa fa-chevron-up"></i>
                        </a>
                        <a class="dropdown-toggle" data-toggle="dropdown" href="form_basic.html#">
                            <i class="fa fa-wrench"></i>
                        </a>
                        <ul class="dropdown-menu dropdown-user">
                            <li>
                                <a href="form_basic.html#" class="dropdown-item">Config option 1</a>
                            </li>
                            <li>
                                <a href="form_basic.html#" class="dropdown-item">Config option 2</a>
                            </li>
                        </ul>
                        <a class="close-link">
                            <i class="fa fa-times"></i>
                        </a>
                    </div>
                </div>
                <div class="ibox-content">
                    <div class="row">
                        <div class="col-sm-6 b-r">
                            <form role="form" id="frmPage" enctype="multipart/form-data" asp-controller="Page" asp-area="Page" asp-action="Delete">
                                <div class="form-group">
                                    <div class="form-group">
                                        <label>Page Name</label>
                                        <input type="hidden" asp-for="page.PageId" value="@Model.page.PageId" />
                                        <select id="txtPageName" asp-for="page.Name" asp-for="page.Name" class="select2_demo_1 form-control">
                                            <option value="Index">Index</option>
                                            <option value="Create">Create</option>
                                            <option value="Update">Update</option>
                                            <option value="Delete">Delete</option>
                                            <option value="View">View</option>
                                        </select>
                                    </div>
                                    <div class="form-group">
                                        <label>Page Path</label>
                                        <select id="txtPagePath" asp-for="page.Path" class="select2_demo_1 form-control">
                                            <option value="Index">Index</option>
                                            <option value="Create">Create</option>
                                            <option value="Update">Update</option>
                                            <option value="Delete">Delete</option>
                                            <option value="View">View</option>
                                        </select>
                                    </div>
                                    <div class="form-group">
                                        <label>Menu</label>
                                        <select id="txtMenu" class="select2_demo_1 form-control" asp-items="Model.MenuTypes"></select>
                                    </div>
                                    <div class="form-group">
                                        <label>Sub Menu</label>
                                        <select id="txtSubMenu" class="select2_demo_1 form-control" asp-for="page.SubmenuId" asp-items="Model.subMenuTypes"></select>
                                    </div>
                                </div>
                                <div>
                                    <a href="@Url.Action("Index", "Page", new { Area = "Page" })" class="btn btn-sm btn-danger float-right m-t-n-xs">Cancel</a>
                                    <button class="btn btn-sm btn-primary float-right m-t-n-xs mr-1" type="submit">Remove</button>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

</div>
@section Scripts {
    <script type="text/javascript">
        $(document).ready(function () {
            $("#txtMenu").select2({
                theme: 'bootstrap4'
            }).val('@Model.page.SubmenuId').trigger('change');

            $("#txtSubMenu").select2({
                theme: 'bootstrap4',
            }).val('@Model.page.SubmenuId').trigger('change');

            $("#txtPageName").select2({
                theme: 'bootstrap4'
            }).val('@Model.page.Name').trigger('change');

            $("#txtPagePath").select2({
                theme: 'bootstrap4'
               
            }).val('@Model.page.Path').trigger('change');
        });
    </script>
}